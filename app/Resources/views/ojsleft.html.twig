<!-- Left side column. contains the logo and sidebar --> 
<nav class="navbar-default navbar-static-side" id="leftmenu" role="navigation"> 

    <!-- sidebar: style can be found in sidebar.less -->  
    <div class="user-panel col-md-12">
        {% if(app.user.getAvatar()) %}
            <img src="/uploads/avatars/thumbnail/{{app.user.getAvatar()}}" 
                 class="avatar img-circle img-responsive" style="width:150px" alt="User avatar" />
        {%else%}
            <img src="/assets/app/images/buddy_sample.png" 
                 class="img-circle img-responsive" style="width:150px" alt="User avatar" />
        {%endif%}  
        <hr> 
    </div> 

    <div class="row">
        <center>
            <p>
                {% if userjournalroles %}
                    {%for role in userjournalroles %}
                        <span class="label label-default">{{role.name}}</span> 
                    {%endfor%}
                {%endif%}
            </p>

            {%if userjournals%}
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                        {{ userjournals[session('selectedJournalId')].title[:22]  }}
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                        {%for journal in userjournals%}
                            <li class="info">
                                <a href="{{path('change_selected_journal',{'journal_id':journal.id})}}">
                                    {{journal.title}}
                                </a>
                            </li> 
                        {%endfor%}

                    </ul>
                </div>
            {%endif%}
        </center>
    </div>

    <br>
    <div class="sidebar-collapse">
        <ul class="nav" id="side-menu">
            <li>
                <a href="{{path('articlesubmission_new')}}">
                    <i class="fa fa-plus-circle"></i> 
                    {%trans%}Submit Article{%endtrans%}
                </a>
            </li> 
            <li>
                <a href="{{path('dashboard')}}">
                    <i class="fa fa-dashboard"></i> 
                    {%trans%}Dashboard{%endtrans%}
                </a>
            </li>
            <li>
                <a href="{{path('ojstr_message_message_user_index')}}">
                    <i class="fa fa-envelope"></i>
                    {%trans%}Messages{%endtrans%}</a>
            </li>
            <li>
                <a href="{{path('ojstr_workflow_homepage')}}">
                    <i class="fa fa-cogs"></i>  
                    {%trans%}Workflow{%endtrans%} </a>
            </li>
            <li>
                <a href="{{path('user_show_my_journals')}}">
                    <i class="fa fa-list"></i>  
                    {%trans%}Journals{%endtrans%} </a>
            </li>
            <li>
                <a href="#">
                    <i class="fa fa-list"></i>
                    {%trans%}Articles{%endtrans%}
                    <span class="fa arrow"></span>
                </a>
                <ul class="nav nav-second-level">
                    <li>
                        {% if isSystemAdmin() or isJournalManager()  %}
                            {%set submissions_path = "articlesubmissions_all" %}
                        {%else%}
                            {%set submissions_path = "articlesubmissions_me" %}
                        {% endif %}
                        <a href="{{path(submissions_path)}}">
                            <i class="fa fa-flag"></i>
                            Submissions
                        </a>
                    </li>
                    <li>
                        <a href="#" style="color:#55a"><i class="fa fa-check-circle"></i> Published 
                            <!-- <small class="badge pull-right bg-green">2</small>-->
                        </a>
                    </li>
                    <li><a href="#" style="color:#aa1"><i class="fa fa-clock-o"></i> Waiting</a></li>
