
<!-- Left side column. contains the logo and sidebar -->
<aside class="left-side sidebar-offcanvas">
    {% if ojsuser %}
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        {%if ojsuser%}
        <div class="user-panel">
            <div class="pull-left image">
                {% if(ojsuser.getAvatar()) %}
                <img src="/uploads/avatars/thumbnail/{{ojsuser.getAvatar()}}" class="img-circle" alt="User Image" />
                {%else%}
                <img src="/assets/images/buddy_sample.png" class="img-circle" alt="User Image" />
                {%endif%}
            </div>
            <div class="pull-left info">
                <p>{{ojsuser.getUsername()}}</p>

                <a href="#"><i class="fa fa-circle text-success"></i> Last login : {{ojsuser.getLastogin()|date('Y-m-d H:i:s')}}</a>
            </div>
        </div>
        {%endif%}
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search..."/>
                <span class="input-group-btn">
                    <button type='submit' name='seach' id='search-btn' class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="active">
                <a href="/">
                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="{{path('ccdn_message_message_user_index')}}">
                    <i class="glyphicon glyphicon-envelope"></i>
                    Messsages</a>
            </li>
            <li>
                <a href="{{path('manager_show_my_journals')}}">
                    <i class="fa fa-th"></i> <span>Journals</span> 
                </a>
            </li>
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-bar-chart-o"></i>
                    <span>Articles</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li>
                        <a href="#" style="color:#55a"><i class="fa fa-check"></i> Published 
                            <!-- <small class="badge pull-right bg-green">2</small>-->
                        </a>
                    </li>
                    <li><a href="#" style="color:#aa1"><i class="fa fa-clock-o"></i> Waiting</a></li>
                    <li><a href="#" style="color:#a11"><i class="fa fa-exclamation"></i> Rejected</a></li>
                </ul>
            </li>
                {% if isSystemAdmin() %}
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-folder"></i> <span>Admin</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li><a href="/manager/user"><i class="fa fa-angle-double-right"></i> Users</a></li>
                    <li><a href="/manager/role"><i class="fa fa-angle-double-right"></i> Roles</a></li>
                    <li class="divider"></li>
                    <li><a href="/manager/theme"><i class="fa fa-angle-double-right"></i> Themes</a></li>
                    <li><a href="/manager/institution"><i class="fa fa-angle-double-right"></i> Institutions</a></li> 
                    <li><a href="/manager/eventlog"><i class="fa fa-angle-double-right"></i> Institutions</a></li> 
                </ul>
            </li>

                {% endif %}

        </ul>
    </section>
    <!-- /.sidebar -->
    {% endif %}
</aside>
