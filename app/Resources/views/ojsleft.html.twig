                </ul>
            </li>

            {% if isSystemAdmin() %}
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-folder"></i>
                        {%trans%}Admin{%endtrans%}<span class="fa arrow"></span>
                    </a>
                    <ul class="nav nav-second-level">
                        <li>
                            <a href="{{path('user')}}"><i class="fa fa-cogs"></i> Users</a>
