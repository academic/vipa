                {%include '::language_selector.html.twig'%}

                <div class="navbar-right">
                    <ul class="nav navbar-nav"> 
                        {% if app.user %}
                            <li class="dropdown messages-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
