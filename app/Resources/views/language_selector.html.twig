<li class="dropdown navbar-btn">
    <a href="#" title="{{ app.request.locale }}" class="dropdown-toggle" data-toggle="dropdown" data-placement="bottom">
        <i class="fa fa-globe"></i>
        {{ app.request.locale }}
        <span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">
        {% for lang in languages %}
            <li class="{% if app.request.locale == lang.code %}disabled{% endif %}">
                <a href="{{ path('change_locale', { 'code': lang.code }) }}">{{ lang.name }}</a>
            </li>
        {% endfor %}
    </ul>
</li> 
