{% block a2lix_translations_widget %}
    <div class="a2lix_translations tabbable">
        <ul class="a2lix_translationsLocales nav nav-tabs">
            {% for translationsFields in form %}
                {% set locale = translationsFields.vars.name %}

                <li {% if app.request.locale == locale %}class="active"{% endif %}>
                    <a href="javascript:void(0)" data-toggle="tab" data-target=".a2lix_translationsFields-{{ locale }}">
                        {{ locale|capitalize }}
                    </a>
                </li>
            {% endfor %}
        </ul>

        <div class="a2lix_translationsFields tab-content">
            {% for translationsFields in form %}
                {% set locale = translationsFields.vars.name %}

                <div class="a2lix_translationsFields-{{ locale }} tab-pane {% if app.request.locale == locale %}active{% endif %}">
                    {{ form_widget(translationsFields) }}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block a2lix_translations_gedmo_widget %}
    {% if form.vars.simple_way %}
        {{ block('a2lix_translations_widget') }}
    {% else %}
        {% set isArticleSubmission = 'ojs_article_submission_step2_translations' == form.vars.id %}
        <div class="a2lix_translations tabbable">
            <ul class="a2lix_translationsLocales nav nav-tabs">
                {% for translationsLocales in form %}
                    {% set isDefaultLocale = 'defaultLocale' == translationsLocales.vars.name %}

                    {% for translationsFields in translationsLocales %}
                        {% set locale = translationsFields.vars.name %}

                        <li {% if isArticleSubmission %}
                                {% set mandatoryLangCode = form.vars.value.journal.mandatoryLang.code %}
                                {% if mandatoryLangCode == locale %}
                                    class="active"
                                {% endif %}
                            {% else %}
                                {% if isDefaultLocale %}
                                    class="active"
                                {% endif %}
                            {% endif %}>
                            <a href="javascript:void(0)" data-toggle="tab" data-target=".a2lix_translationsFields-{{ locale }}">
                                {{ locale|capitalize }}
                                {% if isArticleSubmission %}
                                    {% if mandatoryLangCode == locale %}
                                        [Required]
                                    {% endif %}
                                {% else %}
                                    {% if isDefaultLocale %}
                                        [Default]
                                    {% endif %}
                                {% endif %}
                            </a>
                        </li>
                    {% endfor %}
                {% endfor %}
            </ul>

            <div class="a2lix_translationsFields tab-content">
                {% for translationsLocales in form %}
                    {% set isDefaultLocale = 'defaultLocale' == translationsLocales.vars.name %}
                    {% for translationsFields in translationsLocales %}
                        {% set locale = translationsFields.vars.name %}

                        <div class="a2lix_translationsFields-{{ locale }} tab-pane
                        {% if isArticleSubmission %}
                            {% set mandatoryLangCode = form.vars.value.journal.mandatoryLang.code %}
                                {% if mandatoryLangCode == locale %}
                                    active
                                {% endif %}
                            {% else %}
                                {% if isDefaultLocale %}
                                    active
                            {% endif %}
                        {% endif %}">
                            {{ form_widget(translationsFields) }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block a2lix_translationsForms_widget %}
    {{ block('a2lix_translations_widget') }}
{% endblock %}
