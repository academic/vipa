{%- spaceless -%}

<ul class="nav nav-pills nav-stacked">

		{%- set route = app.request.attributes.get('_route') -%}

		{%- if current_folder.name is not defined -%}
			{%- if envelope is defined -%}
				{%- set current_folder = envelope.getFolder -%}
			{%- endif -%}
		{%- endif -%}

		{%- if
			route == 'ojs_message_message_user_mail_compose' or
			route == 'ojs_message_message_user_mail_compose_to' or
			route == 'ojs_message_message_user_mail_compose_reply' or
			route == 'ojs_message_message_user_mail_compose_forward'
		-%}
    <li class="active">
        <a href="{{- path('ojs_message_message_user_mail_compose') -}}">
            <i class="glyphicon glyphicon-pencil"></i>
					{{- 'link.message.compose' | trans({}, 'OkulBilisimMessageBundle') -}}
        </a>
    </li>
		{%- else -%}
    <li>
        <a href="{{- path('ojs_message_message_user_mail_compose') -}}">
            <i class="glyphicon glyphicon-pencil"></i>
					{{- 'link.message.compose' | trans({}, 'OkulBilisimMessageBundle') -}}
        </a>
    </li>
		{%- endif -%}

		{%- set folders = message_bundle_folder_list() -%}

		{%- if folders['folders'] is defined -%}
			{%- import 'OkulBilisimMessageBundle:Common:Layout/Sidebar/sidebarMacro.html.twig' as format -%}

			{%- for folder in folders['folders'] -%}
				{%- if current_folder is defined
					and route != 'ojs_message_message_user_mail_compose'
					and route != 'ojs_message_message_user_mail_compose_to'
					and route != 'ojs_message_message_user_mail_compose_reply'
					and route != 'ojs_message_message_user_mail_compose_forward'
				-%}
					{{- format.folderWithCurrentFolder(folder, current_folder) -}}
				{%- else -%}
					{{- format.folder(folder) -}}
				{%- endif -%}
			{%- endfor -%}
		{%- endif -%}

		{#
		{% if folders['quota'] is defined -%}
			<li class="divider"></li>
			<li style="text-align:center;padding:5px;">
				<div class="col-md-3">
					<i class="glyphicon glyphicon-hdd"></i>
					{{- folders['quota']['allowed'] -}}&#37;&nbsp;
				</div>
				<div class="col-md-9">
					<div class="progress progress-danger">
						<div class="bar" style="width:{{- folders['quota']['used'] -}}%;"></div>
					</div>
				</div>
			</li>
		{%- endif -%}
		#}

</ul>

{%- endspaceless -%}
