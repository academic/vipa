{%- spaceless -%}
	{%- for type, messages in app.session.flashbag.all() -%}
	    {%- for message in messages -%}
                <div class="alert alert-{{ type -}}">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    {{- message -}}
                </div>
	    {%- endfor -%}
	{%- endfor -%}
{%- endspaceless -%}
