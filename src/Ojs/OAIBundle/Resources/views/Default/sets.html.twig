{% extends 'OjsOAIBundle:Default:layout.html.twig' %}
{% block content %}
    <request verb="ListSets">http://ojs.dev/oai</request>
    <ListSets>
        {% for record in records %}
            <set>
                <setSpec>{{ record.domain }}</setSpec>
                <setName>{{ record.title }}</setName>
                <setDescription>
                    <{{ metadataPrefix() }}:dc
                            xmlns:dc="http://purl.org/dc/elements/1.1/"
                            >
                        <dc:description>{{ record.subtitle }}</dc:description>
                    </{{ metadataPrefix() }}:dc>
                </setDescription>
            </set>
        {% endfor %}
    </ListSets>
{% endblock %}
