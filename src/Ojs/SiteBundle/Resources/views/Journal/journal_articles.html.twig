{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.journal_articles'|trans }} {{ parent() }}{% endblock %}
{% set hideleft = 1 %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('ojs_public_index'), 'title': ojs.title|trans},
    {'link':generateJournalUrl(journal), 'title': journal.title},
    {'title': "articles"|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body %}

    <div class="container">
        <br>

        <div class="row">
            <!-- The carousel -->
            <div class="page-header row">
                <div class="col-md-1 hidden-sm hidden-xs">
                    <img src="holder.js/72x72/#f9A497:#ffffff/text:cover" class="img-responsive"/>
                </div>
                <div class="col-md-11">
                    <h1>{{ journal.title }}</h1>
                    <h6>{{ journal.subtitle }}</h6>
                </div>
            </div>


            <div class="row">

                <div class="col-md-12">
                    <div class="panel panel-default">

                        <ul class="list-group">
                            {% for article in articles %}
                                <li class="list-group-item list-group-item-default">
                                    <a href="{{ url('ojs_article_page',{article_id: article.id,slug: journal.slug,institution: journal.institution.slug}) }}">
                                        <i class="fa fa-file-text"></i> {{ article.title }}
                                    </a>
                                    <br/>
                                    <i class="fa fa-users"></i>
                                    <span class="text-muted">
                                        (
                                        {% if article.created.date %}
                                            {{ article.created.date|date('Y-m-d') }}
                                        {% endif %}
                                        )
                                    </span>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                    {% include 'OjsSiteBundle:Journal:journal_right_block.html.twig' %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        analytics.increase('journal', {{ journal.id }})
    </script>
{% endblock %}
