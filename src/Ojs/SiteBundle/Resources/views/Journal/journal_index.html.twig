{% extends "::ojsbase.html.twig" %}
{% set hideleft = 1 %}
{% block breadcrumb %}{% endblock %}
{% block body %}

    <div class="container">
        {% block journalheader %}
            <div id="header">
                {% set imageoptions=getImageOptions(journal,'header','journal_header') %}
                <div class="col-md-12"><img src="{{ ('/uploads/journalfiles/'~imagePath(journal.header))|imagine_filter('journal_header',{"crop":{"start":[imageoptions.x,imageoptions.y],"size":[imageoptions.width,imageoptions.height] }}) }}"
                     data-src="holder.js/1400x100/random/text:{{ journal.title }}/size:11/font:Arial/#34465D:#ffffef" class="width100 img-responsive" />
                </div>
                <div class="col-md-12">
                    <dl class="journal-meta">
                        {% if journal.issn %}
                            <dt>ISSN</dt>
                            <dd>{{ journal.issn }}</dd>
                        {% endif %}
                        {% if journal.eissn %}
                            <dt>eISSN</dt>
                            <dd>{{ journal.eissn }}</dd>
                        {% endif %}
                        {% if journal.languages %}
                        <dt>{{ "journal_langs"|trans }}</dt>
                        <dd>{% for language in journal.languages %}
                                <span class="badge badge-success">{{ language.name }}</span>
                                {% else %}
                                <span class="badge badge-info">{{ "-"|trans}}</span>
                            {% endfor %}</dd>
                        {% endif %}
                        {% if journal.period %}
                            <dt>{{ "period"|trans }}</dt>
                            <dd>{{ journal.period }}</dd>
                        {% endif %}
                        <!--
                        {% if journal.country %}
                        <dt>{{ "country"|trans }}</dt>
                        <dd>{{ journal.country }}</dd>
                        {% endif %}
                        -->
                    </dl>
                </div>
                <h1>{{ journal.title }}

                </h1>
                <h6> {{ journal.titleAbbr }}  </h6>
                <!--
                <h6>{{ journal.subtitle }}
                    <small>{{ journal.titleTransliterated }}</small>
                </h6>
                -->
            </div>
        {% endblock %}
        <div class="row">
            <div class="col-md-2">
                {% set imageoptions=getImageOptions(journal,'cover','journal_cover') %}

                <img src="{{ ('/uploads/journalfiles/'~imagePath(journal.image))|imagine_filter('journal_cover',{"crop":{"start":[imageoptions.x,imageoptions.y],"size":[imageoptions.width,imageoptions.height] }}) }}"
                     data-src="holder.js/253x180/random/text:{{ journal.title }} "
                     class="img-responsive img-rounded float-left" alt=""/>

                <a href="#" class="list-group-item ">
                    <span class="pull-right">
                        <i class="fa fa-eye"></i>
                    </span>
                    <span class="list-group-item-heading count">
                        {{random(10000)|number_format(0, '.') }}</span> 
                </a>
                <a href="#" class="list-group-item ">
                    <span class="pull-right">
                        <i class="fa fa-download"></i>
                    </span>
                    <span class="list-group-item-heading count">
                        {{random(10000)|number_format(0, '.') }}</span> 
                </a>
            </div>
            <div class="col-md-7">
                {% if journal.url %}
                    <a href="{{ journal.url }}" target="_blank"><small>{{ journal.url }}</small></a>
                {% endif %}
                {{ journal.description|raw }}
            </div>
            <div class="col-md-3">


                <div class="list-group journal-stats">
                    <div class="list-group-item ">
                        <form   role="search" action="/search" method="get">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="{{"search"|trans}}" name="q">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <a href="//{{base_host}}{{path('article_submission_new_with_journalId',{"journalId":journal.id})}}"
                       class="list-group-item list-group-item-success"><h5><i class="fa fa-plus-circle"></i> {{ "article.submit"|trans }}</h5>
                    </a>
                    {% if last_issue%}
                        <a class="list-group-item" href="{{ url('ojs_issue_page',{journal_slug:journal.slug,id: last_issue.id, institution: journal.institution.slug}) }}">
                            <h5><i class="fa fa-file-text-o"></i> {{ "read.lastissue"|trans }}</h5>
                        </a>
                    {% endif %}

                    <a href="{{ url('ojs_announcement_index',{slug: journal.slug, institution: journal.institution.slug}) }}"
                       class="list-group-item "><h5><i class="fa fa-newspaper-o"></i> {{ "announcements"|trans }}</h5>
                    </a>
                    <a href="{{ url('ojs_archive_index',{slug: journal.slug, institution: journal.institution.slug}) }}"
                       class="list-group-item "><h5><i class="fa fa-archive"></i> {{ "archive"|trans }}</h5>
                    </a>

                    <a href="{{ url('ojs_journal_contacts',{slug: journal.slug, institution: journal.institution.slug}) }}"
                       class="list-group-item "><h5><i class="fa fa-phone"></i> {{ "journalcontact.singular"|trans }}</h5>
                    </a>

                    <a href="" class="list-group-item "><h5><i class="fa fa-file-o"></i> {{ "about"|trans }}</h5>
                    </a>

                    {% if enable_social is defined  %}
                        <a href="#" class="list-group-item facebook-like">
                            <h3 class="pull-right">
                                <i class="fa fa-facebook-square"></i>
                            </h3>
                            <h5 class="list-group-item-heading count">
                                {{random(10000)}}</h5>

                            <p class="list-group-item-text">
                                Facebook Likes</p>
                        </a>
                        <a href="#" class="list-group-item google-plus">
                            <h3 class="pull-right">
                                <i class="fa fa-google-plus-square"></i>
                            </h3>
                            <h5 class="list-group-item-heading count">
                                {{random(10000)}}</h5>

                            <p class="list-group-item-text">
                                Google+</p>
                        </a>
                        <a href="#" class="list-group-item twitter">
                            <h3 class="pull-right">
                                <i class="fa fa-twitter-square"></i>
                            </h3>
                            <h5 class="list-group-item-heading count">
                                1000</h5>

                            <p class="list-group-item-text">
                                Twitter Followers</p>
                        </a>
                    {% endif %}
                </div>
                <div class="list-group">
                    {% for index in journal.journalsIndexs %}
                        <div class="list-group-item">
                            <a href="{{ index.link }}" target="_blank">
                                <h5>
                                    {% if index.journalIndex.logo %}
                                    <img src="{{ ('/uploads/journalindexfiles/'~imagePath(index.journalIndex.logo))|imagine_filter('journalindex_logo') }}" alt="{{ index.journalIndex }}"/>
                                    {% endif %}
                                    {{ index.journalIndex.name }}
                                </h5>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <hr/>

        <div class="row">

            <div class="col-md-12">
                <h5 class="page-header"><span class="panel-title">{{ "journal_index.issues"|trans }}</span></h5>
                <div class="col-md-3">

                    <div id="issuetree">
                        <ul>
                            {% for key, issues in years %}
                                <li>
                                    <h4 title=" {{ "year"|trans }}"> {{ key }}
                                        <a title="{{ "journal_index.issues"|trans }}" class="badge">{{ issues|length }} </a>
                                    </h4>

                                    <ul>
                                        {% for issue in issues %}
                                            <li>
                                                <a href="{{ url('ojs_issue_page',{journal_slug: journal.slug, institution: issue.journal.institution.slug,id: issue.id}) }}">
                                                    {{"volume"|trans}}  {{ issue.volume }} - {{"issue.number"|trans}} {{ issue.number }}
                                                    {% if issue.special%}
                                                        <span class="label label-success">
                                                            <i class="fa fa-star" title="{{"special.issue"|trans}}"></i>
                                                            {{"special.issue"|trans}}
                                                        </span>
                                                    {% endif %}&nbsp;
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endfor %}

                        </ul>
                        <a class="btn btn-primary " href="{{ url('ojs_archive_index',{slug: journal.slug, institution: journal.institution.slug}) }}">
                            <i class="fa fa-arrow-right"></i>{{ "archive"|trans }}</a>

                    </div>

                </div>
                <div class="col-md-6" id="issue-container">
                    {% if last_issue %}
                        <div class="panel panel-default">
                            <div class="panel-heading"><strong>{{ last_issue.title }}</strong>
                              {{"issue.number"|trans}} {{last_issue.number}} {{"volume"|trans}} {{last_issue.volume}} - {{ last_issue.datePublished|localizeddate("medium",'none',null,null,'MMM Y') }}</div>
                            <div class="panel-body">
                                <ul>
                                    {% for article in last_issue.articles[:10] %}
                                        <li><a href="{{ url('ojs_article_page',{slug:journal.slug,issue_id:article.issueId  , article_id:article.id,institution:journal.institution.slug}) }}">{{ article.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>

                            </div>
                        </div>
                    {% endif %}

                </div>
                <div class="col-md-3">
                    {% include 'OjsSiteBundle:Journal:journal_right_block.html.twig' %}
                </div>

            </div>

        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        analytics.increase('journal', {{ journal.id }})
    </script>
{% endblock %}
