<div class="row-fluid search-field-items">
    <div class="col-md-2">
        <div class="form-group condition-form">
            <label for=""> &nbsp;</label>
            <select class="form-control item-condition" onchange="OJSAdvancedSearch.updateInputQuery()">
                <option value="OR">OR</option>
                <option value="AND">AND</option>
                <option value="NOT">NOT</option>
            </select>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label for="">Field</label>
            <select class="form-control item-search-field" onchange="OJSAdvancedSearch.updateInputQuery()">
                {% for mappingKey,mappingItem in mapping %}
                    {% for itemKey,item in mappingItem.properties %}
                        <option value="{{ mappingKey~'.'~itemKey }}">{{ mappingKey }} - {{ itemKey }}</option>
                    {% endfor %}
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group">
            <label for="">Value</label>

            <div class="input-group">
                <input class="form-control field-item-value" type="text" onkeyup="OJSAdvancedSearch.updateInputQuery()"/>

                <div class="input-group-addon remove-field-item" onclick="OJSAdvancedSearch.removeFieldItem(this)">
                    <a href="javascript:void(0)"><i class="fa fa-trash"></i></a>
                </div>
                <div class="input-group-addon add-field-item" onclick="OJSAdvancedSearch.addFieldItem()">
                    <a href="javascript:void(0)"><i class="fa fa-plus"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>