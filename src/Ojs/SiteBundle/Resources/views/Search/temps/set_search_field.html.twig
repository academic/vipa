<div class="row-fluid search-field-items">
    <div class="col-md-2">
        <div class="form-group condition-form">
            <label for=""> &nbsp;</label>
            <select class="form-control item-condition" onchange="OJSAdvancedSearch.updateInputQuery()">
                <option value="OR">{{ 'search.or'|trans }}</option>
                <option value="AND">{{ 'search.and'|trans }}</option>
                <option value="NOT">{{ 'search.not'|trans }}</option>
            </select>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label for="">{{ 'search.field'|trans }}</label>
            <select class="form-control item-search-field" onchange="OJSAdvancedSearch.updateInputQuery()">
                {% for mappingKey,mappingItem in mapping %}
                    {% for itemKey,item in mappingItem.properties %}
                        <option value="{{ mappingKey~'.'~itemKey }}" {% if item['type'] is defined  %}data-type="{{ item['type'] }}"{% endif %}>{{ mappingKey|trans }} - {{ itemKey|trans }}</option>
                    {% endfor %}
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group">
            <label for="">{{ 'search.value'|trans }}</label>

            <div class="input-group">
                <input class="form-control field-item-value" type="text" onkeyup="OJSAdvancedSearch.updateInputQuery()"/>

                <div class="input-group-addon remove-field-item" onclick="OJSAdvancedSearch.removeFieldItem(this)">
                    <a href="javascript:void(0)" title="{{ 'search.removeFieldItem'|trans }}"><i class="fa fa-trash"></i></a>
                </div>
                <div class="input-group-addon add-field-item" onclick="OJSAdvancedSearch.addFieldItem()">
                    <a href="javascript:void(0)" title="{{ 'search.addFieldItem'|trans }}"><i class="fa fa-plus"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>