{% extends '::ojsbase.html.twig' %}
{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'},
    {'title': 'pages.management'|trans  },
    { 'title': 'pages.detail'|trans  }
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}


{% block body -%}
    <h1>Page</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ entity.body }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ entity.tags }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ entity.image }}</td>
            </tr>
        </tbody>
    </table>

    <div class="record_actions">
        {% set back_path = 'admin_page' %}
        {% set edit_path = 'admin_page_edit' %}
        {% set delete_path = 'admin_page_delete' %}
        {% include '::actionbtns.html.twig' %}
    </div>
{% endblock %}
