{% extends "::ojsbase.html.twig" %}
{% set hideleft = 1%}
{%block breadcrumb %}{% endblock %}
{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="/">{{"home"|trans}}</a></li>
                    <li><a href="{{ generateJournalUrl(article.journal) }}">{{ article.journal.title }}</a></li>
                    <li class="active"><a href="{{ path("ojs_archive_index",{"slug" : article.journal.slug,institution: journal.institution.slug}) }}">{{"archive"|trans}}</a></li>

                </ol>

                <div class="panel panel-default">
                    <div class="panel-body">
                        <div id="articleTitle">
                            {% if article.header %}
                            {% set imageoptions=getImageOptions(article,'header','article_header') %}
                            <a href="{{generateJournalUrl(article.journal)}}">
                                <img src="{{ ('/uploads/articlefiles/'~imagePath(article.header))|imagine_filter('article_header',{"crop":{"start":[imageoptions.x,imageoptions.y],"size":[imageoptions.width,imageoptions.height]}}) }}"
                                     data-src="holder.js/960x200/random/text:{{journal.title}}" class="img-responsive img-rounded float-left" alt="{{ article.title }}" />
                            </a>
                            {% endif %}
                            <div> 
                                {% if article.pubdate %} <span class=" {{"date.publish"|trans}}">{{ article.pubdate|date('Y-m-d') }}</span> <br>{% endif %}
                                {{"volume"|trans}} {{article.issue.volume}}, <a href="#">{{"issue"|trans}} {{article.issue.number}}</a>,
                                {{"page.plural"|trans}} <span title="{{"first_page"|trans}}">{{article.firstPage}}</span>-<span title="{{"last_page"|trans}}">{{article.lastPage}}</span>
                                {% if article.languages %}
                                    <span title="{{"languages"|trans}}">
                                        {% for language in article.languages %} 
                                            <span class="badge badge-info">{{ language.name }} [{{ language.code}}]</span>
                                        {% endfor %}
                                    {%endif%}
                                </span>
                            </div>

                            <hr>
                            <h2 class="title">{{ article.title }}
                                <br> {% if article.titleTransliterated %}<span class="muted">{{ article.titleTransliterated }}</span><br>{%endif%}
                                {% if article.subtitle %}<small>{{ article.subtitle }}</small><br>{%endif%}
                                {% if article.articleAuthors %}
                                    {% for authorsInfo in article.articleAuthors %}
                                        <small>
                                            <span class="author">{{ authorsInfo.author.fullName }}</span><sup><a href="#author{{authorsInfo.author.id}}" class="btn btn-link">[{{loop.index}}]</a></sup>
                                        </small>
                                        {% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                {%endif%}
                                <small id="articleStats" class="pull-right text-muted">
                                    <span><i class="fa fa-eye"></i> {{ stat(article.id,'article','view') }}</span>
                                    <span><i class="fa fa-download"></i> {{ stat(article.id,'article','download') }} </span>
                                </small>
                            </h2>
                        </div>
                        <hr />

                        <div id="articleAbstract">
                            <h4 class="page-header">{{"abstract"|trans}}</h4>
                            <div>
                                {{ article.abstract|raw }}
                            </div>
                        </div>

                        <div id="articleKeywords">
                            <h4 class="page-header">{{"keywords"|trans}}</h4>
                            <div>
                                {% set keywords = article.keywords|split(',') %}
                                {% for keyword in keywords %}
                                    <a href="{{path('ojs_search_index',{ 'q': keyword })}}">{{keyword}}</a>{% if not loop.last %}, {% endif %} 
                                {% endfor %}
                            </div>
                        </div>
                        <hr>
                        <div id="files">
                            {% for file in article.articleFiles %}
                                <a href="{{ download(file.file) }}" class="btn btn-sm btn-info" target="_blank">
                                    <i class="fa fa-file-pdf-o"></i> <abbr title="{{ file.file.mimetype }} - {{ (file.file.size/1024) }} kb">{{ file.title }} {% if file.langCode %}{{ file.title }} ({{ file.langCode }}{% endif %}</abbr>
                                </a>
                            {% endfor %}
                        </div>

                        <div id="doiInfo">
                            <h4 class="page-header">{{ 'doi'|trans }}</h4>
                            <p class="text-success"><a href="#" class="btn btn-success">{{ article.doi }}</a></p>

                        </div>

                        <div>
                            <h4 class="page-header">{{"tools"|trans}}</h4>
                            <a class="btn btn-fresh" title="Save to Zotero" href="javascript:var d=document,s=d.createElement('script');s.src='https://www.zotero.org/bookmarklet/loader.js';(d.body?d.body:d.documentElement).appendChild(s);void(0);">
                                <img src="//dergipark.ulakbim.gov.tr/assets/images/zotero.ico" width="16"> Zotero</a> |
                            <a class="btn btn-fresh" title="Save to Mendeley" onclick="ga('send', 'event', 'article_tools', 'mendeley');" href="javascript:document.getElementsByTagName('body')[0].appendChild(document.createElement('script')).setAttribute('src','https://www.mendeley.com/minified/bookmarklet.js');">
                                <img src="//dergipark.ulakbim.gov.tr/assets/images/mendeley.ico" width="16"> Mendeley</a>

                        </div>

                        <div id="articleCitations">
                            <h4 class="page-header">{{"citations"|trans}}</h4>
                            <div>
                                <ul>
                                    {% for citation in article.citations %}
                                        <li>{{citation.raw}}</li>
                                        {%endfor%}
                                </ul>
                            </div>
                        </div> 

                        <div id="articleCitations">
                            <h4 class="page-header">{{"details"|trans}}</h4>
                            <table class="record_properties table">
                                <tr>
                                    <th>{{"primaly_language"|trans}}</th>
                                    <td>
                                        <span class="label label-info">{{ article.primaryLanguage}}</span>
                                    </td>
                                </tr>

                                <tr>
                                    <th>{{"subjects"|trans}}</th>
                                    <td>
                                        {{ article.subjects }}
                                    </td>
                                </tr>

                                <tr>
                                    <th>{{ 'otherid'|trans }}</th>
                                    <td>{{ article.otherId }}</td>
                                </tr> 
                                <tr>
                                    <th>{{ 'pubdate'|trans }}</th>
                                    <td>{{ article.pubdateSeason }}</td>
                                </tr>
                                <tr>
                                    <th>{{"part"|trans}}</th>
                                    <td>{{ article.part }}</td>
                                </tr> 
                                {% if article.section %}
                                    <tr>
                                        <th>{{"section"|trans}}</th> 
                                        <td>{{ article.section.title }}</td>
                                    </tr>
                                {% endif %}
                                {% if article.articleAuthors %}
                                    <tr>
                                        <th>{{ 'authors'|trans }}</th>
                                        <td> 
                                            {% for authorsInfo in article.articleAuthors %}
                                                <p>
                                                    <a name="author{{authorsInfo.author.id}}" id="author{{authorsInfo.author.id}}"></a>
                                                    <strong class="author"> {{authorsInfo.author.fullName}}</strong> :
                                                    {{authorsInfo.author.summary}}
                                                </p>
                                            {%endfor%}
                                        </td>
                                    </tr>
                                {%endif%}
                            </table>
                        </div> 
                        <br>

                    </div>
                </div>

                <!-- /content -->
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                {%include 'OjsSiteBundle:Journal:journal_right_block.html.twig'%}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        analytics.increase('article',{{ article.id }} )
    </script>
{% endblock %}