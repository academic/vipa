{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.article'|trans }} {{ parent() }}{% endblock %}
{% set hideleft = 1 %}

{% if isInstitutionHosting is defined %}
    {% set journalUrl = url('institution_hosting_journal_index',{slug:article.journal.slug}) %}
{% elseif isJournalHosting is defined %}
    {% set journalUrl = url('institution_hosting_journal_index') %}
{% else %}
    {% set journalUrl = generateJournalUrl(article.journal) %}
{% endif %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('ojs_public_index'), 'title': 'ojs.title'|trans},
    {'link': journalUrl,'title': article.journal.title},
    {'link': path("ojs_archive_index",{"slug" : article.journal.slug,institution: journal.institution.slug}), 'title': "archive"|trans },
    {'link': path('ojs_issue_page',{journal_slug:journal.slug,id: article.issue.id, institution: journal.institution.slug}),'title': "volume"|trans~ article.issue.volume ~"," ~ "issue"|trans ~ article.issue.number }
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="{{ url('ojs_issue_page',{journal_slug:journal.slug,id: article.issue.id, institution: journal.institution.slug}) }}">{{ "volume"|trans }} {{ article.issue.volume }}
                            , {{ "issue"|trans }} {{ article.issue.number }}</a>,
                        {{ "page.plural"|trans }} <span
                                title="{{ "first_page"|trans }}">{{ article.firstPage }}</span>-<span
                                title="{{ "last_page"|trans }}">{{ article.lastPage }}</span>
                        {% if article.languages %}
                            <abbr title="{{ "languages"|trans }}">
                                {% for language in article.languages %}
                                    <span class="badge badge-info">{{ language.name }} [{{ language.code }}
                                        ]</span>
                                {% endfor %}

                            </abbr>
                        {% endif %}
                        <span class="pull-right">
                            {% if article.pubdate %}
                                <span>
                                    <i class="fa fa-calendar"></i> {{ article.pubdate|date('Y-m-d') }}
                                </span>
                            {% endif %}
                            <i class="fa fa-eye"></i> {{ stat(article.id,'article','view') }}
                            <i class="fa fa-download"></i> {{ stat(article.id,'article','download') }}
                        </span>

                    </div>
                    <div class="panel-body">
                        <div id="articleTitle">
                            {% if article.header %}
                                {% set imageoptions=getImageOptions(article,'header','article_header') %}
                                <a href="
                                {% if isInstitutionHosting is defined %}
                                    {{ url('institution_hosting_journal_index', {slug: article.journal.slug}) }}
                                {% else %}
                                    {{ generateJournalUrl(article.journal) }}
                                {% endif %}">
                                    <img src="{{ article.header|imagine_filter('article_header') }}"
                                         data-src="holder.js/960x200/random/text:{{ journal.title }}"
                                         class="img-responsive img-rounded float-left" alt="{{ article.title }}"/>
                                </a>
                            {% endif %}

                            <h2 class="title">{{ article.title }}
                                <br> {% if article.titleTransliterated %}<span
                                        class="muted">{{ article.titleTransliterated }}</span><br>{% endif %}
                                {% if article.subtitle %}
                                    <small>{{ article.subtitle }}</small>
                                {% endif %}
                                {% if article.articleAuthors %}
                                    {% for authorsInfo in article.articleAuthors %}
                                        <small>
                                            <span class="author">{{ authorsInfo.author.fullName }}</span><sup><a
                                                        href="#author{{ authorsInfo.author.id }}"
                                                        class="btn btn-link">[{{ loop.index }}]</a></sup>
                                        </small>
                                        {% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </h2>
                        </div>
                        <hr/>

                        <div id="doiInfo">

                            <p class="text-success"><a href="http://dx.doi.org/{{ article.doi }}"
                                        >{{ 'doi'|trans }}: {{ article.doi }}</a></p>

                        </div>

                        {% if article.abstract %}
                            <div id="articleAbstract">
                                <h4 class="page-header">{{ "abstract"|trans }}</h4>

                                <div>
                                    {{ article.abstract|raw }}
                                </div>
                            </div>
                        {% endif %}

                        {% set keywords = article.keywords|split(',') %}
                        {% if keywords|length %}
                            <div id="articleKeywords">
                                <h4 class="page-header">{{ "keywords"|trans }}</h4>

                                <div>
                                    {% for keyword in keywords %}
                                        <a
                                        href="{{ path('ojs_search_index',{ 'q': keyword }) }}">{{ keyword }}</a>{% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}

                        {% if article.citations|length > 0 %}
                            <div id="articleCitations">
                                <h4 class="page-header">{{ "citations"|trans }}</h4>

                                <div>
                                    <ul>
                                        {% for citation in article.citations %}
                                            <li>{{ citation.raw }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        {% endif %}

                        <div id="article_meta">
                            <h4 class="page-header">{{ "details"|trans }}</h4>
                            <table class="record_properties table">
                                {% if article.primaryLanguage %}
                                    <tr>
                                        <th>{{ "primaly_language"|trans }}</th>
                                        <td>
                                            <span class="label label-info">{{ article.primaryLanguage }}</span>
                                        </td>
                                    </tr>
                                {% endif %}
                                {% if article.subjects %}
                                    <tr>
                                        <th>{{ "subjects"|trans }}</th>
                                        <td>
                                            {{ article.subjects }}
                                        </td>
                                    </tr>
                                {% endif %}
                                {% if article.otherId %}
                                    <tr>
                                        <th>{{ 'otherid'|trans }}</th>
                                        <td>{{ article.otherId }}</td>
                                    </tr>
                                {% endif %}
                                {% if article.pubdateSeason %}
                                    <tr>
                                        <th>{{ 'pubdate'|trans }}</th>
                                        <td>{{ article.pubdateSeason }}</td>
                                    </tr>
                                {% endif %}
                                {% if article.part %}
                                    <tr>
                                        <th>{{ "part"|trans }}</th>
                                        <td>{{ article.part }}</td>
                                    </tr>
                                {% endif %}
                                {% if article.section %}
                                    <tr>
                                        <th>{{ "section"|trans }}</th>
                                        <td>{{ article.section.title }}</td>
                                    </tr>
                                {% endif %}
                                {% if article.articleAuthors %}
                                    <tr>
                                        <th>{{ 'authors'|trans }}</th>
                                        <td>
                                            {% for authorsInfo in article.articleAuthors %}
                                                <p>
                                                    <a name="author{{ authorsInfo.author.id }}"
                                                       id="author{{ authorsInfo.author.id }}"></a>
                                                    <strong class="author"> {{ authorsInfo.author.fullName }}</strong> :
                                                    {{ authorsInfo.author.summary }}
                                                </p>
                                            {% endfor %}
                                        </td>
                                    </tr>
                                {% endif %}
                            </table>
                        </div>

                    </div>
                    <div class="panel-footer">
                        {% if article.articleFiles|length > 0 %}
                            <div id="articlePreview">
                                {% for file in article.articleFiles %}
                                    {% if file.type==0 %}
                                        <a href="{{ download(file.file) }}"
                                           class="embed btn btn-lg btn-primary"><i
                                                    class="fa fa-download"></i> {{ file.title }}</a>
                                    {% else %}
                                        <a href="{{ download(file.file) }}"
                                           class="btn btn-lg btn-primary"><i
                                                    class="fa fa-download"></i> {{ file.title }}</a>

                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- /content -->
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <div class="list-group journal-stats">
                    <div class="list-group-item ">
                        <form role="search" action="/search" method="get">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="{{ "search.on.journal"|trans }}"
                                       name="q">

                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <a href="//{{ base_host }}{{ path('ojs_journal_submission_journal',{"journalId":journal.id}) }}"
                       class="list-group-item list-group-item-success"><h5><i
                                    class="fa fa-plus-circle"></i> {{ "article.submit"|trans }}</h5>
                    </a>


                    <a href="" class="list-group-item "><h5><i class="fa fa-file-o"></i> {{ "about"|trans }}</h5>
                    </a>

                    <a href="{% if isInstitutionHosting is defined %}
                                {{ url('institution_hosting_journal_archive',{slug: journal.slug}) }}
                            {% elseif isJournalHosting is defined %}
                                {{ url('journal_hosting_archive') }}
                            {% else %}
                                {{ url('ojs_archive_index',{slug: journal.slug, institution: journal.institution.slug}) }}
                            {% endif %}"
                       class="list-group-item "><h5><i class="fa fa-archive"></i> {{ "archive"|trans }}</h5>
                    </a>

                    <a href="{{ url('ojs_journal_contacts',{slug: journal.slug, institution: journal.institution.slug}) }}"
                       class="list-group-item "><h5><i class="fa fa-phone"></i> {{ "journalcontact.singular"|trans }}
                        </h5>
                    </a>
                    <a href="{{ url('ojs_announcement_index',{slug: journal.slug, institution: journal.institution.slug}) }}"
                       class="list-group-item "><h5><i class="fa fa-newspaper-o"></i> {{ "announcements"|trans }}</h5>
                    </a>


                    {% if enable_social is defined %}
                        <a href="#" class="list-group-item facebook-like">
                            <h3 class="pull-right">
                                <i class="fa fa-facebook-square"></i>
                            </h3>
                            <h5 class="list-group-item-heading count">
                                {{ random(10000) }}</h5>

                            <p class="list-group-item-text">
                                Facebook Likes</p>
                        </a>
                        <a href="#" class="list-group-item google-plus">
                            <h3 class="pull-right">
                                <i class="fa fa-google-plus-square"></i>
                            </h3>
                            <h5 class="list-group-item-heading count">
                                {{ random(10000) }}</h5>

                            <p class="list-group-item-text">
                                Google+</p>
                        </a>
                        <a href="#" class="list-group-item twitter">
                            <h3 class="pull-right">
                                <i class="fa fa-twitter-square"></i>
                            </h3>
                            <h5 class="list-group-item-heading count">
                                1000</h5>

                            <p class="list-group-item-text">
                                Twitter Followers</p>
                        </a>
                    {% endif %}
                </div>
                <div class="list-group">
                    {% for index in journal.journalsIndexs %}
                        <div class="list-group-item">
                            <a href="{{ index.link }}" target="_blank">
                                <h5>
                                    {% if index.journalIndex.logo %}
                                        <img src="{{ index.journalIndex.logo|imagine_filter('journalindex_logo') }}"
                                             alt="{{ index.journalIndex }}"/>
                                    {% endif %}
                                    {{ index.journalIndex.name }}
                                </h5>
                            </a>
                        </div>
                    {% endfor %}
                </div>

            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        analytics.increase('article', {{ article.id }})
    </script>
{% endblock %}
