{% extends "::base.html.twig" %}

{% block title %}OjsSiteBundle:People:show{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('ojs_public_index'), 'title': 'ojs.title'|trans},
    {'title': 'people.show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body %}
    <h1>Welcome to the People:show page</h1>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        analytics.increase('people', {{ people.id }})
    </script>
{% endblock %}
