{% extends "::ojsbase.html.twig" %}
{% set hideleft = 1%}

{%block breadcrumb %}{% endblock %}
{% block body %}

    <div class="container">
        <div class="page-header">
            <h1>{{entity.title}}</h1>
            <h6>{{entity.subtitle}}</h6>
        </div>

        <div class="col-lg-9 col-md-9 col-sm-12">
            <div class="row">
                <div class="col-md-4">
                    <img src="holder.js/200x300/#f9A497:#ffffff/text:{{entity.title}}" class="img-responsive img-rounded float-left" alt="" />
                </div>

                <div class="col-md-8">
                    <h3>{{"scope"|trans}}</h3>
                    <p class="text-default">
                        {{entity.scope}}
                    </p>
                    <h3>{{"mission"|trans}}</h3>
                    <p class="text-default">
                        {{entity.mission}}
                    </p>
                </div>
                <hr>
                <div class="col-md-8">
                    <a href="/journal/{{ entity.id }}/last" class="btn btn-alt btn-xs btn-sky"><i class="fa fa-eye"></i> {{"read.lastissue"|trans}}</a>
                    <a href="/journal/{{ entity.id }}/archive" class="btn btn-alt btn-xs btn-sunny"><i class="fa fa-archive"></i> {{"archive"|trans}}</a>
                    <p class="text-default">
                        <span id="journal-issn" class="label label-info"><strong>ISSN</strong>: {{entity.issn}}</span>
                        <span id="journal-eissn" class="label label-info"><strong>e-ISSN</strong>: {{entity.eissn}}</span>
                    </p>

                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4 class="page-header"><span class="panel-title">{{"editorial"|trans}}</span></h4>
                    <p>
                        <strong>{{"editor"|trans}}</strong>
                        <br>
                        Prof. Dr. Rauf AMİROV
                        <br>
                        <strong>Assistant Editors</strong><br>
                        Assoc. Prof. Dr. Nilüfer TOPSAKAL<br>
                        Assoc. Prof. Dr. Şifa TÜRKOĞLU<br>
                        Assist. Prof. Dr. Nüket KARTAL TEMEL<br>
                        Assist. Prof. Dr. Serkan AKKOYUN<br>
                    </p>
                    <table class="record_properties  table">

                        <tbody>
                            <tr>
                                <th width="300px">Id</th>
                                <td>{{ entity.id }}</td>
                            </tr>
                            <tr>
                                <th>{{"title"|trans}}</th>
                                <td>{{ entity.title }}</td>
                            </tr>
                            <tr>
                                <th>{{"title_abbr"|trans}}</th>
                                <td>{{ entity.titleAbbr }}</td>
                            </tr>
                            <tr>
                                <th>{{"titletransliterated"|trans}}</th>
                                <td>{{ entity.titleTransliterated }}</td>
                            </tr>
                            <tr>
                                <th>{{"journal_langs"|trans}}</th>
                                <td>{% for language in entity.languages %}{{language.name}}{%endfor%}</td>
                            </tr>

                            <tr>
                                <th>{{"subtitle"|trans}}</th>
                                <td>{{ entity.subtitle }}</td>
                            </tr>
                            <tr>
                                <th>ISSN</th>
                                <td>{{ entity.issn }}</td>
                            </tr>
                            <tr>
                                <th>e-ISSN</th>
                                <td>{{ entity.eissn }}</td>
                            </tr>
                            <tr>
                                <th>{{"first_publish_date"|trans}}</th>
                                <td>{{ entity.firstPublishDate|date('Y-m-d H:i:s') }}</td>
                            </tr>
                            <tr>
                                <th>{{"period"|trans}}</th>
                                <td>{{ entity.period }}</td>
                            </tr>
                            <tr>
                                <th>{{"url"|trans}}</th>
                                <td>{{ entity.url }}</td>
                            </tr>
                            <tr>
                                <th>{{"country"|trans}}</th>
                                <td>{{ entity.country }}</td>
                            </tr>
                            <tr>
                                <th>{{"published"|trans}}</th>
                                <td>{{ entity.published }}</td>
                            </tr>
                            <tr>
                                <th>{{"status"|trans}}</th>
                                <td>{{ entity.status }}</td>
                            </tr>
                            <tr>
                                <th>{{"image"|trans}}</th>
                                <td>{{ entity.image }}</td>
                            </tr>
                            <tr>
                                <th>{{"scope"|trans}}</th>
                                <td>{{ entity.scope }}</td>
                            </tr>
                            <tr>
                                <th>{{"mission"|trans}}</th>
                                <td>{{ entity.mission }}</td>
                            </tr>
                            <tr>
                                <th>{{"theme_id"|trans}}</th>
                                <td>{{ entity.themeId }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">

            {% if isJournalManager() %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="#">
                            <span class="panel-title">
                                <i class="fa fa-plus"></i> {{"new.block"|trans}}
                            </span>
                        </a></div>
                </div>
            {% endif %}

            <div class="panel panel-default">
                <div class="panel-heading"><span class="panel-title">{{"for.readers"|trans}}</span></div>
                <ul class="list-group">
                    <li class="list-group-item">
                        <a href="/journal/{{ entity.id }}/last"><i class="fa fa-eye"></i> {{"read.lastissue"|trans}}</a>
                    </li>
                    <li class="list-group-item">
                        <a href="/journal/{{ entity.id }}/archive"><i class="fa fa-archive"></i> {{"archive"|trans}}</a>
                    </li>
                    {% if isJournalManager() %}
                        <li class="list-group-item"><a href="#">
                                <i class="fa fa-plus"></i> <strong>{{"new.link"|trans}}</strong></a>
                        </li>
                    {% endif %}
                </ul>
            </div>

            <div class="panel panel-warning">
                <div class="panel-heading"><span class="panel-title">{{"for.authors"|trans}}</span></div>
                <ul class="list-group">
                    <li class="list-group-item"><a href="#"><i class="fa fa-plus"></i> Online Makale Gönder</a></li>
                    <li class="list-group-item"><a href="/journal/{{ entity.id }}/mission"><i class="fa fa-adjust"></i> Dergi Kapsamı ve Amacı</a></li>
                        {% if isJournalManager() %}
                        <li class="list-group-item"><a href="#"><i class="fa fa-plus"></i> <strong>{{"add_link"|trans}}</strong></a></li>
                        {%endif%}
                </ul>
            </div>
            <div class="panel panel-success">
                <div class="panel-heading"><span class="panel-title">{{ "journal.about"|trans }}</span></div>
                <ul class="list-group">
                    <li class="list-group-item"><a href="/journal/{{ entity.id }}/mission"><i class="fa fa-link"></i> {{"mission"|trans}}</a></li>
                    <li class="list-group-item"><a href="/journal/{{ entity.id }}/scope"><i class="fa fa-link"></i> {{"scope"|trans }}</a></li>
                        {% if isJournalManager() %}
                        <li class="list-group-item"><a href="#"><i class="fa fa-plus"></i> <strong>Link ekle</strong></a></li>
                        {%endif%}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}