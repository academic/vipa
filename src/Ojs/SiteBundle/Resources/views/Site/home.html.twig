{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.home'|trans }} {{ parent() }}{% endblock %}
{% set hideleft = 1 %}
{% block body %}
    <div class="container">
        <section role="welcome">
            <div class="row">
                <div class="col-md-4 col-xs-12 text-center ">
                    <a href="{{ path("ojs_public_index") }}"><img src="{{ ojs_logo }}"/></a>
                    <hr/>
                    <div id="stats">
                        <dl class="home-stats">
                            <dd>
                                <span>{{ stats.journal|number_format(0,'.','.') }}</span>
                                <br>
                                {{ "journal"|trans }}
                            </dd>
                            <dd>
                                <span>{{ stats.article|number_format(0,'.','.') }}</span>
                                <br>
                                {{ "article"|trans }}
                            </dd>
                            <dd>
                                <span>{{ stats.user|number_format(0,'.','.') }}</span>
                                <br>
                                {{ "user"|trans }}
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="col-md-8 col-xs-12">
                    <div class="row">
                        <div class="col-md-12">
                            <form action="{{ path('ojs_search_index') }}" method="get">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-primary dropdown-toggle"
                                                data-toggle="dropdown"
                                                aria-haspopup="true" aria-expanded="false"><span
                                                    id="search-type-text">{{ 'basicsearch'|trans }}</span> <span
                                                    class="caret"></span></button>
                                        <ul class="dropdown-menu">
                                            <li><a href="javascript:void(0)" class="select-search-type"
                                                   data-type="basic">{{ ('basicsearch')|trans }}</a></li>
                                            <li><a href="javascript:void(0)" class="select-search-type"
                                                   data-type="tag">{{ ('tagsearch')|trans }}</a></li>
                                        </ul>
                                    </div>
                                    <input type="text" name="q" class="form-control" value=""
                                           placeholder="{{ "search.on.everywhere"|trans }}">
                                    <span class="input-group-btn">
                                        <button class="btn btn-primary" type="submit" title="{{ "search"|trans }}"><i
                                                    class="fa fa-search"></i></button>
                                    </span>
                                </div>
                                <input type="hidden" name="type" value="basic" id="search-type">
                            </form>
                        </div>
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col-md-12">
                            <p class="text-center">
                                {% if not app.user %}
                                    <a href="{{ path("register") }}" class="btn btn-primary btn-labeled"><span
                                                class="btn-label"><i
                                                    class="fa fa-user"></i></span> {{ "register"|trans }}
                                    </a>
                                {% endif %}

                                <a href="{{ url("ojs_apply_institution") }}"
                                   class="btn btn-primary  btn-labeled"><span class="btn-label"><i
                                                class="fa fa-institution"></i></span> {{ 'institute.register'|trans }}
                                </a>

                                <a href="{{ url('ojs_apply_journal') }}" class="btn btn-primary btn-labeled"><span
                                            class="btn-label"><i
                                                class="fa fa-book"></i></span> {{ "ojs"|trans }} {{ "journal.register"|trans }}
                                </a>
                                <a href="{{ url('ojs_journal_submission_new', {journalId: selectedJournal().id}) }}"
                                   class="btn btn-primary btn-labeled"><span
                                            class="btn-label"><i
                                                class="fa fa-file-pdf-o"></i></span>{{ 'article.submit'|trans }}</a>
                            </p>
                        </div>
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="content">
                                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                                    <!-- Indicators -->
                                    <ol class="carousel-indicators">
                                        <li data-target="#carousel-example-generic" data-slide-to="0"
                                            class="active"></li>
                                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                                    </ol>
                                    <!-- Wrapper for slides -->
                                    <div class="carousel-inner">
                                        <div class="item active">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <div class="thumbnail adjust1">
                                                        <div class="col-md-2 col-sm-2 col-xs-12"><img
                                                                    class="media-object img-rounded img-responsive"
                                                                    src="http://placehold.it/100"></div>
                                                        <div class="col-md-10 col-sm-10 col-xs-12">
                                                            <div class="caption"><p class="text-info lead adjust2">I
                                                                    can't wait to test this out.</p>

                                                                <p><span class="glyphicon glyphicon-thumbs-up"></span> This
                                                                    is a testimonial window. Feedback of user can be
                                                                    displayed here.</p>
                                                                <blockquote class="adjust2"><p>Abhijit Goswami</p>
                                                                    <small><cite title="Source Title"><i
                                                                                    class="glyphicon glyphicon-globe"></i>
                                                                            www.example1.com</cite></small>
                                                                </blockquote>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <div class="thumbnail adjust1">
                                                        <div class="col-md-2 col-sm-2 col-xs-12"><img
                                                                    class="media-object img-rounded img-responsive"
                                                                    src="http://placehold.it/100"></div>
                                                        <div class="col-md-10 col-sm-10 col-xs-12">
                                                            <div class="caption"><p class="text-info lead adjust2">I
                                                                    can't wait to test this out.</p>

                                                                <p><span class="glyphicon glyphicon-thumbs-up"></span> This
                                                                    is a testimonial window. Feedback of user can be
                                                                    displayed here.</p>
                                                                <blockquote class="adjust2"><p>Abhijit Goswami</p>
                                                                    <small><cite title="Source Title"><i
                                                                                    class="glyphicon glyphicon-globe"></i>
                                                                            www.example2.com</cite></small>
                                                                </blockquote>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <div class="thumbnail adjust1">
                                                        <div class="col-md-2 col-sm-2 col-xs-12"><img
                                                                    class="media-object img-rounded img-responsive"
                                                                    src="http://placehold.it/100"></div>
                                                        <div class="col-md-10 col-sm-10 col-xs-12">
                                                            <div class="caption"><p class="text-info lead adjust2">I
                                                                    can't wait to test this out.</p>

                                                                <p><span class="glyphicon glyphicon-thumbs-up"></span> This
                                                                    is a testimonial window. Feedback of user can be
                                                                    displayed here.</p>
                                                                <blockquote class="adjust2"><p>Abhijit Goswami</p>
                                                                    <small><cite title="Source Title"><i
                                                                                    class="glyphicon glyphicon-globe"></i>
                                                                            www.example3.com</cite></small>
                                                                </blockquote>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Controls --> <a class="left carousel-control" href="#carousel-example-generic"
                                                         data-slide="prev"> <span
                                                class="glyphicon glyphicon-chevron-left"></span> </a> <a
                                            class="right carousel-control" href="#carousel-example-generic"
                                            data-slide="next"> <span class="glyphicon glyphicon-chevron-right"></span>
                                    </a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section role="featured">
            <h4 class="page-header text-success"><i class="fa fa-trophy"></i> {{ 'featured'|trans }}</h4>

            <div class="row">
                <div class="col-md-4 col-xs-12">
                    <p class="lead">
                        {{ "featured.desc"|trans }}
                    </p>
                </div>
                <div class="col-md-8 col-xs-12">
                    <div class="row">
                        {% for journal in journals %}
                            {% set imageoptions=getImageOptions(journal,'cover','journal_cover') %}
                            <div class="col-sm-2 col-md-2 col-xs-4" style="margin-top:10px">
                                <a href="{{ generateJournalUrl(journal) }}">
                                    <img src="{{ ('/uploads/journalfiles/'~imagePath(journal.image))|imagine_filter('journal_cover',{"crop": {"start":[imageoptions.x, imageoptions.y], "size":[imageoptions.width,imageoptions.height]}}) }}"
                                         width="96" height="128"
                                         data-src="holder.js/96x128/random/text:{{ journal.title }}"
                                         class="img-rounded"/>
                                    <small>{{ journal.title }}</small>
                                    <br/>
                                    {% if journal.issn %}
                                        <small>{{ journal.issn }}</small>
                                    {% endif %}
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>
        {% if services is defined %}
            {% include '@OjsSite/Site/services.html.twig' %}
        {% endif %}
        <section role="topics">
            <h4 class="page-header text-info"><i class="fa fa-bookmark"></i> {{ "subject.plural"|trans }}</h4>

            <div class="row">
                <div class="col-md-12 col-xs-12 home-subject-tree">
                    {{ subjects|raw }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
