{% extends "::ojsbase.html.twig" %}
{% set hideleft = 1%}
{%block breadcrumb %}{% endblock %}
{% block body %}
    <div class="container">
        <!-- Page Content -->
        <h1 class="page-header">{{"institutions"|trans}}</h1>
        {% for entity in entities %}
            <div class="panel panel-default">
                <div class="panel-heading"><a href="/institution/{{ entity.id }}">{{ entity.name }}</a></div>
                <div class="panel-body">
                    <ul class="list-group">
                        {% for journal in entity.journals %}
                            <li class="list-group-item"><a href="/journal/{{ journal.id }}">{{ journal.title }}</a></li>
                            {%endfor%}
                    </ul>
                </div>


                <div class="panel-footer">
                    <a href="/institution/{{ entity.id }}" class="btn btn-default btn-xs pull-right">{{"more"|trans}} <i class="fa fa-arrow-right"></i></a>
                    <i class="fa fa-tags"></i>{{"tags"|trans}}
                    <a href="#"><span class="badge">ojs</span></a>
                    <a href="#"><span class="badge">university</span></a>
                    <a href="#"><span class="badge">paper</span></a>
                </div>
            </div>

        {% endfor %}


        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <li>
                        <a href="#">&laquo;</a>
                    </li>
                    <li class="active">
                        <a href="#">1</a>
                    </li>
                    <li>
                        <a href="#">2</a>
                    </li>
                    <li>
                        <a href="#">3</a>
                    </li>
                    <li>
                        <a href="#">4</a>
                    </li>
                    <li>
                        <a href="#">5</a>
                    </li>
                    <li>
                        <a href="#">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->

{% endblock %}