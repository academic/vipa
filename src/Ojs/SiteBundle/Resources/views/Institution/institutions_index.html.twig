{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.institutions'|trans }} {{ parent() }}{% endblock %}
{% set hideleft = 1 %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_public_index'), 'title': 'Ojs'|trans},
        {'title': 'institutions'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body %}
    <div class="container">
        <!-- Page Content -->
        <h1 class="page-header">{{ "institutions"|trans }}</h1>
        <ul class="list-group">
        {% for entity in entities %}
            <a href="{{ url('ojs_institution_page',{slug: entity.slug}) }}" class="list-group-item {% if entity.verified %}list-group-item-success{% endif %}">
                {% if entity.verified %}
                    <i class="badge fa fa-diamond"></i>
                {% endif %}
                {{ entity.name }}</a>

        {% endfor %}
        </ul>

    </div>
    <!-- /.container -->

{% endblock %}
