{% extends "::ojsbase.html.twig" %}
{% set hideleft = 1 %}
{% block breadcrumb %}{% endblock %}
{% block body %}
    <div class="container">
        <!-- Page Content -->
        <h1 class="page-header">{{ "institutions"|trans }}</h1>
        <ul class="list-group">
        {% for entity in entities %}
            <a href="{{ url('ojs_institution_page',{slug: entity.slug}) }}" class="list-group-item {% if entity.isVerified %}list-group-item-success{% endif %}">
                {% if entity.isVerified %}
                    <i class="badge fa fa-diamond"></i>
                {% endif %}
                {{ entity.name }}</a>

        {% endfor %}
        </ul>

    </div>
    <!-- /.container -->

{% endblock %}