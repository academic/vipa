{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('workflow_templates'), 'title': 'workflow.templates'|trans},
    {'link': path('workflow_template_show', {id: template.id}), 'title': template.title},
    {'title': 'workflow.template.edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <div class="panel">
        <div class="panel-heading">
            <h1>{{ 'workflow.template.edit'|trans }}</h1>
        </div>
        <div>
            {{ form_start(form) }}
            {% include '::flashbag.html.twig' %}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">
                {{ "workflow.template.update"|trans }}
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}