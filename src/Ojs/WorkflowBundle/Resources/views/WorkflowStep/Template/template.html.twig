{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
                {'link': path('dashboard'), 'title': 'Dashboard'},
                {'link': path('workflow_templates'), 'title': 'Workflow Templates'},
                {'title': 'Workflow Template Details'}
] %}
    {{breadcrumb(list)}}
{% endblock %}

{% block body -%}

    {% include '::flashbag.html.twig' %}

    <h1>{{template.title}}<br> 
        <small>{{template.description}}</small>
    </h1> 

    {% for entity in steps %}
        <div class="list-group-item">

            <span>

                <a href="{{path('workflow_template_step_show',{ 'stepId': entity.id })}}">
                    <strong>
                        {%if entity.firstStep%}<span class="badge">First</span>{%endif%}
                        {%if entity.lastStep%}<span class="badge">Last</span>{%endif%}
                        {{entity.title}}
                    </strong>
                </a> 
                    <!-- color preview -->
                <span style="width:20px;height:10px;display:inline-block;background-color: {{entity.color}}"></span>
                {%for role in entity.roles%}
                    <span class="label label-info">{{role.name}}</span>
                {%endfor%}
            </span>

            <br>
            <span>
                <small>Next Steps :</small>
                {% if entity.getOnlyReply() %}
                    <span class="label label-primary">
                        Only Reply
                        <i class="fa fa-ok"></i>
                    </span>
                {% else %}
                    {%for step in entity.nextSteps%}
                        <a class="label label-success" href="{{path('workflow_template_step_show',{ 'stepId': step.id })}}">{{step.title}}</a>
                    {%endfor%}
                {% endif %}
            </span> 

            <span class="pull-right btn-group">
                {% if isJournalManager() %}
                    <a class="btn btn-warning btn-xs" href="{{path('workflow_template_step_edit',{ 'stepId': entity.id })}}">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a class="btn btn-danger btn-xs"
                       onclick="return confirm('{{"sure"|trans}}');"
                       href="{{path('workflow_template_step_delete',{ 'stepId': entity.id })}}">
                        <i class="fa fa-trash"></i>
                    </a>
                {% endif %}
            </span> 
        </div>
    {% endfor %}
    <hr>
    <a href="{{path('workflow_template_use',{'id':template.id})}}" class="btn btn-warning btn-lg pull-right"
       onclick="return confirm('Your existing workflow design will be overwritten! Are you sure?');">
        <i class="fa fa-check"></i> {{"useThisTemplate"|trans}}
    </a>
    {% if template.isSystemTemplate is defined %}
        {% if template.isSystemTemplate == false %}
            <a href="{{path('workflow_template_new_step',{'templateId':template.id})}}" class="btn btn-warning">
                <i class="fa fa-plus"></i> {{"workflow.template.addStep"|trans}}
            </a>
        {% endif %}
    {% endif %}


{% endblock %} 