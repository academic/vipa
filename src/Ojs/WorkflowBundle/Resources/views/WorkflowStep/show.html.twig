{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('dashboard'), 'title': 'dashboard'|trans},
        {'link': path('ojs_workflow_homepage'), 'title': 'workflow'|trans},
        {'title': 'workflow.step.detail'|trans}
    ] %}
    {{breadcrumb(list)}}
{% endblock %}

{% block body -%}
    <div class="panel">
        <div class="panel-heading">
            <h1>{{step.title}}</h1>
        </div>
        <div class="panel-body">
            {% include '::flashbag.html.twig' %}
            <table class="table">
                <tr>
                    <th>{{"title"|trans}}</th>
                    <td>{{step.title}}</td>
                </tr>
                <tr>
                    <th>{{"color"|trans}}</th>
                    <td style="background-color:{{step.color}}">{{step.color}}</td>
                </tr>
                <tr>
                    <th>{{"statusText"|trans}}</th>
                    <td>{{step.status}}</i></td>
                </tr>
                {% if step.firstStep %}
                    <tr>
                        <th>{{"firstStep"|trans}}?</th>
                        <td>{{ printYesNo(step.firstStep ) }}</td>
                    </tr>
                {% endif %}
                {% if step.getLaststep %}

                    <tr>
                        <th>{{"lastStep"|trans}}?</th>
                        <td>{{  printYesNo(step.getLaststep()) }}</td>
                    </tr>
                {% endif %}

                <tr>
                    <th>{{"nextSteps"|trans}}</th>
                    <td>
                        {% if step.getOnlyReply() %}
                            <span class="label label-primary">
                                {{"canOnlyReply"|trans}}
                                <i class="fa fa-ok"></i>
                            </span>
                        {% else %}
                            {%for step in step.nextSteps%}
                                <a class="label label-info" href="{{path("workflowsteps_show",{"id":step.id})}}">{{step.title}}</a>
                            {%endfor%}
                        {% endif %}
                    </td>
                </tr>
                {% if step.shouldFileCi  %}
                    <tr>
                        <th>{{ 'Competing of interest statement'|trans }}</th>
                        <td>{{ step.ciText|raw  }}</td>
                    </tr>
                {% endif %}
                <tr>
                    <th>{%trans%}Is visible to author?{%endtrans%}</th>
                    <td>{{ printYesNo(step.isVisible) }}</td>
                </tr>
                <tr>
                    <th>{%trans%}Must be assigned to someone?{%endtrans%}</th>
                    <td>{{ printYesNo(step.mustBeAssigned) }}</td>
                </tr>
                <tr>
                    <th>{{"can.edit?"|trans}}</th>
                    <td>{{ printYesNo(step.canEdit) }}</td>
                </tr>
                <tr>
                    <th>{{"can.review?"|trans}}</th>
                    <td>{{ printYesNo(step.canReview) }}</td>
                </tr>
                <tr>
                    <th>{{"can.seeAuthor?"|trans}}</th>
                    <td>{{printYesNo(step.canSeeAuthor)}}</td>
                </tr>
                <tr>
                    <th>{{"can.rejectSubmission?"|trans}}</th>
                    <td>{{printYesNo(step.canRejectSubmission)}}</td>
                </tr>
                <tr>
                    <th>{{"role.plural"|trans}}</th>
                    <td>
                        {%for role in step.roles%}
                            <span class="label label-default">{{role.name}}</span>
                        {%endfor%}
                    </td>
                </tr>
                <tr>
                    <th>{{"suggestedMaxDays"|trans}}</th>
                    <td>
                        <span class="badge">{{step.maxdays}}</span>
                    </td>
                </tr>
                <tr>
                    <th>{{"review.forms"|trans}}</th>
                    <td>
                        {%if step.reviewForms %}
                            {% for form in step.reviewForms%}
                                <a href="#" title="{{form.id}}" class="badge">{{form.title}}</a>
                            {%endfor%}
                        {%endif%}
                    </td>
                </tr>
                <tr>
                    <th>{{"introduction"|trans}}</th>
                    <td>{{step.introduction|raw}}</td>
                </tr>
            </table>
            <div class="btn-group">
                <a class="btn btn-default" href="{{path('manage_workflowsteps')}}"><i class="fa fa-arrow-left"></i> {{"b"|trans}} </a>
                {% if isJournalManager() %}
                    <a class="btn btn-primary" href="{{path('workflowstep_new')}}"> <i class="fa fa-plus"></i> {{"c"|trans}}</a>
                    <a class="btn btn-warning" href="{{path('workflowsteps_edit',{'id':step.id})}}"><i class="fa fa-edit"></i> {{"e"|trans}}</a>

                {% endif %}
            </div>
            <a class="btn btn-danger pull-right" onclick="return confirm('{{"sure"|trans}}');" href="{{path('workflowsteps_delete',{'id':step.id})}}">{{"d"|trans}}</a>

        </div>
    </div>
{% endblock %}
