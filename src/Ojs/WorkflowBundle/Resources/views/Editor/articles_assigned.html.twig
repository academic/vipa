{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('dashboard'), 'title': 'dashboard'},
        {'title': 'articles.assigned'|trans}
    ] %}
    {{breadcrumb(list)}}
{% endblock %}

{% block body -%}
    <div class="panel">
        <div class="panel-heading">
            <h1>{{"article.plural"|trans}} / {{"status.inreview"|trans}} <small>These articles are in review process.</small></h1>
        </div>

        <div class="panel-body">
            <div class="list-group-item">
                {{ grid(grid) }}
            </div>
        </div>
    </div>
{% endblock %}
