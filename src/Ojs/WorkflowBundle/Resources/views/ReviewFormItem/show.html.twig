{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.review_form_item_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('ojs_review_forms'), 'title': 'review.forms'|trans},
    {'link': path('ojs_review_form_items',{'formId':form.id}),'title': 'form.items'|trans },
    {'title': 'review.form.item.detail'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}

    <h2>
        <small>{{ 'title'|trans }}:</small> {{ formItem.title }}</h2>
    {% include '::flashbag.html.twig' %}
    <table class="table table-responsive">
        <tr>
            <td>{{ 'input_type'|trans }}</td>
            <td>{{ formItem.inputtype }}</td>
        </tr>
        <tr>
            <td>
                {{ 'mandatory'|trans }}
            </td>
            <td>
                {% if formItem.mandatory %}
                    <span class="label label-warning">
                        {{ 'Yes'|trans }}
                        <i class="fa fa-warning"></i>
                    </span>
                {% else %}
                    <span class="label label-info">
                        {{ 'optional'|trans }}
                        <i class="fa fa-check"></i>
                    </span>
                {% endif %}
            </td>
        </tr>

        <tr>
            <td>
                {{ 'confidentail'|trans }}
            </td>
            <td>
                {% if formItem.confidential %}
                    <span class="label label-warning">Yes <i class="fa fa-warning"></i></span>
                {% else %}
                    <span class="label label-info"> No <i class="fa fa-check"></i></span>
                {% endif %}
            </td>
        </tr>
        <tr>
            <td>{{ 'fields'|trans }}</td>
            <td>
                {% if formItem.fields %}
                    <ul>
                        {% for field in formItem.fields %}
                            <li>{{ field }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </td>
        </tr>
        <tr>
            <td>{{ 'fieldset'|trans }}</td>
            <td>{{ formItem.fieldset }}</td>
        </tr>
    </table>
{% endblock %}
