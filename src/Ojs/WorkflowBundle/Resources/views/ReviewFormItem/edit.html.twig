{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
                {'link': path('dashboard'), 'title': 'dashboard'|trans},
                {'link': path('ojs_review_form_items',{'formId': form.id}), 'title': 'review.forms'|trans},
                {'title': 'review.form.item.update'|trans}
] %}
    {{breadcrumb(list)}}
{% endblock %}

{% block body -%}
    <div class="panel">
        <div class="panel-heading">
            <h1>{{ 'form.item.update'|trans }}<small>{{form.title}}</small></h1>
        </div>
        <div class="panel-body"> 
            <form method="post" class="form-row" action="{{path('ojs_review_form_items_update',{'id':formItem.id})}}">
                <div>
                    <label>{{ 'title'|trans }}</label>
                    <input value="{{formItem.title}}"  id="titleinput"  class="form-control" name="title" >
                </div>

                <div>
                    <label>{{ 'mandatory'|trans }}
                        <input type="checkbox" name="mandatory" {% if formItem.mandatory %}checked="checked"{%endif%} id="mandatoryinput" value="1"> 
                    </label>
                    <span class="help-block">{{ 'Is this question mandatory?'|trans }}</span>
                </div>
                <div>
                    <label>{{ "confidential"|trans }}
                        <input type="checkbox" name="confidential" {% if formItem.confidential %}checked="checked"{%endif%} id="confidentialinput" value="1"> 
                    </label>
                    <span class="help-block">{{ "If this question's answer may contain confidential data please check."|trans }}</span>
                </div>

                <div class="form-inline">
                    <label>{{ 'input_type'|trans }}</label>
                    <select class="form-control select2-element" name="inputtype" id="inputtypeinput">
                        <option value="textbox"  {% if formItem.inputType == 'textbox' %}selected="selected"{%endif%} >{{ 'input_types.textbox'|trans }}</option>
                        <option value="textarea"  {% if formItem.inputType == 'textarea' %}selected="selected"{%endif%} >{{ 'input_types.textarea'|trans }}</option>
                        <option rel="hasfields" value="checkboxes"  {% if formItem.inputType == 'checkboxes' %}selected="selected"{%endif%} >{{ 'input_types.checkboxes'|trans }}</option>
                        <option rel="hasfields" value="radiobutton"  {% if formItem.inputType == 'radiobutton' %}selected="selected"{%endif%} >{{ "input_types.radiobutton"|trans }}</option>
                        <option rel="hasfields" value="dropdown"  {% if formItem.inputType == 'dropdown' %}selected="selected"{%endif%} >{{ 'input_types.dropdown'|trans }}</option>
                        <option value="scale1_5"  {% if formItem.inputType == 'scale1_5' %}selected="selected"{%endif%} >{{ 'input_types.scale_1_5'|trans }}</option>
                    </select>

                </div>

                <div id="fieldspart"   style="{% if formItem.inputType  in [ 'radiobutton','radiobutton','checkboxes'] %}display:block{%else%}display:none{%endif%}">
                    <label>{{ 'fields'|trans }}</label>
                    <textarea id="fieldsinput" class="form-control" name="fields" rows="10" placeholder="{{ 'Add each field text as one line'|trans }}" >{%for field in formItem.fields%}{{field}}
{%endfor%}</textarea>
                    </div>
                    <div>
                        <label>{{ 'Fieldset'|trans }}</label>
                        <input value="{{formItem.fieldset}}"  id="fieldsetinput"  class="form-control" name="fieldset" >
                        <span class="help-block">{{ 'Questions will be grouped under fieldset names.'|trans }}</span>
                    </div>

                    <div>
                        <input type="submit" class="btn btn-success" value="{{ 'save'|trans }}" />
                        <a href="{{path('ojs_review_form_items',{'formId':form.id})}}" class="btn btn-default">
                            <i class="fa fa-arrow-left"></i>
                            {{"b"|trans}}
                        </a>
                    </div>
                </form>
            </div>
        </div>
        {% endblock %}


            {% block javascripts -%}
                {{  parent()  }}
                <script>
                    $(document).ready(function () {
                        $("#inputtypeinput").change(function () {
                            if ($("#inputtypeinput option:selected").attr("rel") === "hasfields") {
                                $("#fieldspart").slideDown("fast");
                            } else {
                                $("#fieldspart").slideUp("fast");
                            }
                        });
                    });
                </script>
            {% endblock %}