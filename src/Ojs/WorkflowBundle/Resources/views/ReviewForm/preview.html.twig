{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('ojs_review_forms'), 'title': 'review.forms'|trans},
    {'title': 'review.form.preview'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <div class="panel panel-info">
        {% include '::flashbag.html.twig' %}
        <div class="panel-heading"><h3> {{ form.title }}</h3></div>
        <div class="panel-body">
            {% include 'OjsWorkflowBundle:ReviewForm:form_items_rendered.html.twig' with  {'formitems': formitems } only %}
        </div>
        <div class="panel-footer"></div>
    </div>
{% endblock %}
