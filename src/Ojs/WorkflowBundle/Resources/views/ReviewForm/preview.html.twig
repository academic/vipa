{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
                {'link': path('dashboard'), 'title': 'Dashboard'},
                {'link': path('ojs_review_forms'), 'title': 'review.forms'},
                {'title': 'Review Form Preview'}
] %}
    {{breadcrumb(list)}}
{% endblock %}

{% block body -%}  


    <div class="panel panel-info">
        <div class="panel-heading"> <h3> {{form.title}}</h3></div>
        <div class="panel-body">
            {% include 'OjsWorkflowBundle:ReviewForm:form_items_rendered.html.twig' with  {'formitems': formitems } only %}
        </div>
        <div class="panel-footer"></div>
    </div>
{% endblock %}
