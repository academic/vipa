{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
                {'link': path('dashboard'), 'title': 'Dashboard'},
                {'link': path('ojs_review_forms'), 'title': 'Review Forms'}
] %}
    {{breadcrumb(list)}}
{% endblock %}

{% block body -%}
    <div class="panel">
        <div class="panel-heading">
            <h1>Review Forms</h1>
        </div>
        <div class="panel-body">
            {% for entity in forms %}
                <div class="list-group-item"> 

                </div>
            {% endfor %}
            <hr>

            {% if isJournalManager() %}
                <a href="{{path('ojs_review_forms_new')}}" class="btn btn-success">
                    <i class="fa fa-plus"></i> {{"create"|trans}}
                </a>
            {% endif %} 
        </div>


    </div>

{% endblock %}
