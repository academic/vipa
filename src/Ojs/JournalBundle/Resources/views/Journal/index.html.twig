{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
                {'link': path('dashboard'), 'title': 'Dashboard'},
                { 'title': 'Journal Manager'}
] %}
    {{breadcrumb(list)}}
{% endblock %}

{% block body -%} 
    <div class="large-12 columns">
        <div class="panel">
            <h1>Journal List</h1>
            <div class="panel">
                <a class="btn btn-info" href="{{path('journal')}}">
                    <i class="fa fa-asterisk"></i> All journals</a>
                <a class="btn btn-default" href="{{path('user_show_my_journals')}}">
                    <i class="fa fa-user"></i> My journals</a>
            </div>
            <table class="records_list  table" style="width:100%">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Issn</th>
                        <th>First Publish Date</th> 

                        <th width="60px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a  class="label label-success" href="{{ path('journal_show', { 'id': entity.id }) }}">id: {{ entity.id }}</a>
                                <a href="{{ entity.url }}">{{ entity.title }}</a> 
                                <span class="badge" title="published">{{ entity.published }}</span>
                                <span class="label label-info" title="Status">{{entity.status}}</span>
                            </td>
                            <td>{{ entity.issn }}</td>
                            <td>{% if entity.firstPublishDate %}{{ entity.firstPublishDate|date('Y-m-d H:i:s') }}{% endif %}</td>

                            <td>{{ entity.status }}</td>
                            <td>
                                {% set show_path = 'journal_show' %}
                                {% set edit_path = 'journal_edit' %}
                                {% set delete_path = 'journal_delete' %}
                                {% include '::actionbtns.html.twig' %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div>
                <a href="{{ path('journal_new') }}" class="btn btn-success">
                    {% trans %}c{% endtrans %}
                </a>
            </div>
        </div> 
    </div>
{% endblock %}
