{% extends '::ojsbase.html.twig' %}
{% set hideleft=1 %}
{#
journal.public_index.html.twig
#}
{% block body -%}

    <div class="page-header">
        <h1>{{entity.title}}</h1>
        <h6>{{entity.subtitle}}</h6>
    </div>
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12">
            <div class="row">
                <div class="col-md-4">
                    <img src="holder.js/200x300/#f9A497:#ffffff/text:{{entity.title}}" class="img-rounded img-responsive float-left" alt="" />
                </div>

                <div class="col-md-8">
                    <h3>{{"scope"|trans}}</h3>
                    <p class="text-default">
                        {{entity.scope}}
                    </p>
                    <h3>{{"mission"|trans}}</h3>
                    <p class="text-default">
                        {{entity.mission}}
                    </p>
                </div>
                <hr>
                <div class="col-md-8">
                    <a href="" class="btn btn-alt btn-xs btn-sky"><i class="fa fa-eye"></i> {{"read.lastissue"|trans}}</a>

                    <a href="" class="btn btn-alt btn-xs btn-sunny"><i class="fa fa-archive"></i> {{"archive"|trans}}</a>
                    <p class="text-default">
                        <span class="label label-info"><strong>ISSN</strong>: {{entity.issn}}</span>
                        <span class="label label-info"><strong>e-ISSN</strong>: {{entity.eissn}}</span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4 class="page-header"><span class="panel-title">{{"editorial"|trans}}</span></h4>
                    <p>
                        <strong>Editor</strong>
                        <br>
                        Prof. Dr. Rauf AMİROV
                        <br>
                        <strong>Assistant Editors</strong><br>
                        Assoc. Prof. Dr. Nilüfer TOPSAKAL<br>
                        Assoc. Prof. Dr. Şifa TÜRKOĞLU<br>
                        Assist. Prof. Dr. Nüket KARTAL TEMEL<br>
                        Assist. Prof. Dr. Serkan AKKOYUN<br>
                    </p>

                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
            {% if isJournalManager() %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="#">
                            <span class="panel-title">
                                <i class="fa fa-plus"></i> {{"new.block"|trans}}
                            </span>
                        </a></div>
                </div>
            {% endif %}
            <div class="panel panel-default">
                <div class="panel-heading"><span class="panel-title">{{"for.readers"|trans}}</span></div>
                <ul class="list-group">
                    <li class="list-group-item">
                        <a href=""><i class="fa fa-eye"></i> {{"read.lastissue"|trans}}</a>
                    </li>
                    <li class="list-group-item">
                        <a href=""><i class="fa fa-archive"></i> {{"archive"|trans}}</a>
                    </li>
                    {% if isJournalManager() %}
                        <li class="list-group-item"><a href="#">
                                <i class="fa fa-plus"></i> <strong>{{"new.link"|trans}}</strong></a>
                        </li>
                    {% endif %}
                </ul>
            </div>

            <!-- from blow demo content -->
            <div class="panel panel-warning">
                <div class="panel-heading"><span class="panel-title">{{"for.authors"|trans}}</span></div>
                <ul class="list-group">
                    <li class="list-group-item"><a href="#"><i class="fa fa-plus"></i> Online Makale Gönder</a></li>
                    <li class="list-group-item"><a href="#"><i class="fa fa-adjust"></i> Dergi Kapsamı ve Amacı</a></li>
                        {% if isJournalManager() %}
                        <li class="list-group-item"><a href="#"><i class="fa fa-plus"></i> <strong>Link ekle</strong></a></li>
                        {%endif%}
                </ul>
            </div>
            <div class="panel panel-success">
                <div class="panel-heading"><span class="panel-title">{{ "journal.about"|trans }}</span></div>
                <ul class="list-group">
                    <li class="list-group-item"><a href="#"><i class="fa fa-link"></i> {{"mission"|trans}}</a></li>
                    <li class="list-group-item"><a href="#"><i class="fa fa-link"></i> {{"scope"|trans }}</a></li>
                        {% if isJournalManager() %}
                        <li class="list-group-item"><a href="#"><i class="fa fa-plus"></i> <strong>Link ekle</strong></a></li>
                        {%endif%}
                </ul>
            </div>
            <div class="panel panel-info">
                <div class="panel-heading"><span class="panel-title">Indexler</span></div>
                <p>
                    demo content
                </p>
            </div>
        </div>


    </div>
{% endblock %}
