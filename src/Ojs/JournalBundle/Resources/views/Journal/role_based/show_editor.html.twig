{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.journal_show'|trans }} {{ parent() }}{% endblock %}

{#
journal.show tpl for editors
#}

{% block breadcrumb %}
    {% set list = [
    {'link': path('ojs_journal_dashboard_index', {journalId: selectedJournal().id}), 'title': 'dashboard'|trans},
    {'link': path('ojs_admin_journal_index'),'title': 'journal.manager'|trans},
    {'title': 'title.journal_show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <table class="record_properties  table">

        <tbody>
        <tr>
            <th width="300px">{{ 'id'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "title"|trans }}</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>{{ "titleabbr"|trans }}</th>
            <td>{{ entity.titleAbbr }}</td>
        </tr>
        <tr>
            <th>{{ "titletransliterated"|trans }}</th>
            <td>{{ entity.titleTransliterated }}</td>
        </tr>
        <tr>
            <th>{{ "journal.langs"|trans }}</th>
            <td>{% for language in entity.languages %}{{ language.name }}{% endfor %}</td>
        </tr>

        <tr>
            <th>{{ "subtitle"|trans }}</th>
            <td>{{ entity.subtitle }}</td>
        </tr>
        <tr>
            <th>{{ 'ISSN'|trans }}</th>
            <td>{{ entity.issn }}</td>
        </tr>
        <tr>
            <th>{{ 'eISSN'|trans }}</th>
            <td>{{ entity.eissn }}</td>
        </tr>
        <tr>
            <th>{{ "firstpublishdate"|trans }}</th>
            <td>{{ entity.firstPublishDate|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>{{ "period"|trans }}</th>
            <td>{{ entity.period }}</td>
        </tr>
        <tr>
            <th>{{ "url"|trans }}</th>
            <td>{{ entity.url }}</td>
        </tr>
        <tr>
            <th>{{ "country"|trans }}</th>
            <td>{{ entity.country }}</td>
        </tr>
        <tr>
            <th>{{ "published"|trans }}</th>
            <td>{{ entity.published }}</td>
        </tr>
        <tr>
            <th>{{ "status"|trans }}</th>
            <td>{{ entity.status }}</td>
        </tr>
        <tr>
            <th>{{ "image"|trans }}</th>
            <td>{{ entity.image }}</td>
        </tr>
        <tr>
            <th>{{ "theme.id"|trans }}</th>
            <td>{{ entity.themeId }}</td>
        </tr>
        <tr>
            <th>{{ "users"|trans }}</th>
            <td><a href="{{ path('ujr_show_users_ofjournal',{ 'journal_id': entity.id }) }}">{{ "users"|trans }}</a>
            </td>
        </tr>
        </tbody>
    </table>
    {% set back_path = 'ojs_admin_journal_index' %}
    {% set edit_path = 'ojs_admin_journal_edit' %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
