{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.article_types'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    { 'title': 'article.types'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "article.type.list"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ grid(grid) }}
    {% if is_granted('CREATE', getEntity('OjsJournalBundle:ArticleTypes')) %}
        <a href="{{ path('articletypes_new') }}" class="btn btn-success">{{ "c"|trans }}</a>
    {% endif %}
{% endblock %}
