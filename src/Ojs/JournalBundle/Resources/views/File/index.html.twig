{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.files'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'title': 'file'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "file.list"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {% if is_granted('CREATE', getEntity('OjsJournalBundle:File')) %}
        <a href="{{ path('admin_file_new') }}">{{ "c"|trans }}</a>
    {% endif %}
    {{ grid(grid) }}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
