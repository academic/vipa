{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>{{"file.details"|trans}}</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties table">
        <tbody>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{"file.path"|trans}}</th>
                <td><small>{{ entity.path }}</small></td>
            </tr>
            <tr>
                <th>{{"name"|trans}}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{"mimetype"|trans}}</th>
                <td>{{ entity.mimeType }}</td>
            </tr>
            <tr>
                <th>{{"size"|trans}}</th>
                <td>{{ entity.size }}</td>
            </tr>
        </tbody>
    </table>

    <div class="record_actions">
        {% set back_path = 'admin_file' %}
        {% set edit_path = 'admin_file_edit' %}
        {% set delete_path = 'admin_file_delete' %}
        {% include '::actionbuttons.html.twig' %}
    </div>
{% endblock %}
