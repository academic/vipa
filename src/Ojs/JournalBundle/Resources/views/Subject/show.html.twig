{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>{{"subject"|trans}}</h1>

    <table class="record_properties  table">
        <tbody>
            <tr>
                <th width="200px">{{ 'id'|trans }}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{"subject"|trans}}</th>
                <td>{{ entity.subject }}</td>
            </tr>
            <tr>
                <th>{{"description"|trans}}</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="record_actions">
        <a href="{{ path('subject') }}" class="button">
            {{"b"|trans}}
        </a>
        <a href="{{ path('subject_edit', { 'id': entity.id }) }}" class="button">
            {{"e"|trans}}
        </a>
        {{ form(delete_form) }}
    </div>
{% endblock %}
