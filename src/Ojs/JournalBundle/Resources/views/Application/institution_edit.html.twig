{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('dashboard'), 'title': 'dashboard'|trans},
        { 'link': path('institution_application'),'title': 'application.institute'|trans},
        {'title': 'edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@apptour_css' output="c/apptour.css" %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block body -%}
<div class="large-12 columns">
    <div class="panel">
        <h1>{{ "application.institution.edit"|trans }}</h1>
        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}, 'style': 'horizontal'}) }}
        <button type="submit" class="btn btn-success pull-right">{{ "update"|trans }}</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {% javascripts '@apptour_js' output="c/apptour.js" %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
            {% javascripts '@OjsJournalBundle/Resources/public/js/tour/journal_admin_tour.js' output="c/journal_admin_tour.js" %}
        {% if app.user.setting('tour.admin.journal') == FALSE %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endif %}
    {% endjavascripts %}
{% endblock %}