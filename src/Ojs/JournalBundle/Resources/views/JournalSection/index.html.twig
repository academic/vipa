{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>{{"journalsection.list"|trans}}</h1>

    <table class="table records_list">
        <thead>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <th>{{"title"|trans}}</th>
                <th>{{"allow_index"|trans}}</th>
                <th>{{"hide_title"|trans}}</th>
                <th>{{"journal.id"|trans}}</th>
                <th>{{"actions"|trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_journal_section_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.allowIndex }}</td>
                    <td>{{ entity.hideTitle }}</td>
                    <td>
                        <a href="#">
                            <strong class="badge">{% if entity.journal%}{{ entity.journal.title }}{%endif%}</strong>
                        </a>
                    </td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_journal_section_show', { 'id': entity.id }) }}">{{"s"|trans}}</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_journal_section_edit', { 'id': entity.id }) }}">{{"e"|trans}}</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_journal_section_new') }}">
                {{"c"|trans}}
            </a>
        </li>
    </ul>
{% endblock %}
