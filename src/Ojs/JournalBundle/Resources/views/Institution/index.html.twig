{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %} 
    {{breadcrumb([ {'link': path('dashboard'), 'title': 'Dashboard'}, { 'title': 'Institution Manager'} ])}}
{% endblock %} 

{% block body -%}

    <table class="records_list  table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Country</th> 
                <th>Phone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a class="badge" href="{{ path('institution_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.address }}</td>
                    <td>{{ entity.country }}</td> 
                    <td>{{ entity.phone }}</td>
                    <td><span class="label label-default">{{ entity.email }}</span></td>
                    <td>
                        {% set edit_path = 'institution_edit' %}
                        {% set show_path = 'institution_show' %}
                        {% set delete_path = 'institution_delete' %}
                        {% include '::actionbtns.html.twig' %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table> 
    <a href="{{ path('institution_new') }}"  class="btn btn-success">
        {% trans %}c{% endtrans %}
    </a> 
{% endblock %}
