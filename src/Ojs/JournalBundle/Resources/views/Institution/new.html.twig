{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {{ breadcrumb([ {'link': path('dashboard'), 'title': 'Dashboard'},
    { 'title': 'Institution Manager', 'link' : path('institution')},
    { 'title': 'New Institution'}]) }}
{% endblock %} 

{% block body -%}

    {{ form_start(form, { 'attr': { 'enctype' :'multipart/form-data'} }) }}
    {% for label, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
            <div class="alert alert-{{ label }}">
                {{ flash }}
            </div>
        {% endfor %}
    {% endfor %}
    {{ form_errors(form) }}

    {{ form_widget(form) }}
    <div class="form-group">
        <label class="control-label" for="fileupload">Logo</label>

    <span class="btn btn-success fileinput-button form-control">
                <i class="fa fa-plus"></i>
                <span>Select image file...</span>
                <input id="fileupload" type="file" data-url="{{ oneup_uploader_endpoint('institutionfiles') }}">
            </span>

        <div id="institution_logo_upload_progress" style="display: none" class="label label-info">

        </div>
    </div>
    <button type="submit" id="ojs_userbundle_user_submit" class="btn btn-primary">
        {{ "Create"|trans }}
    </button>
    {{ form_end(form) }}
    {% set back_path = 'institution' %}
    {% include '::actionbtns.html.twig' %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@upload_js' output="c/upload.js" %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#fileupload').fileupload({});
            $('#fileupload').bind('fileuploadsend', function (e, data) {
                $('#institution_logo_upload_progress').show();
                $('#institution_logo_upload_progress').html("Uploading...");
            }).bind('fileuploaddone', function (e, data) {
                $('#institution_logo_upload_progress').html("Done.");
                $('#ojs_journalbundle_institution_logo').attr('value', JSON.parse(data.result).files.name);
            });
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@upload_css' '%kernel.root_dir%/../web/vendor/select2/select2.css' output="c/user_admin.css" filter="cssrewrite" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

{% endblock %}
