{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.languages'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'title': 'language'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "lang.list"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ grid(grid) }}
    {% if is_granted('CREATE', getEntity('OjsJournalBundle:Lang')) %}
        <a href="{{ path('lang_new') }}" class="btn btn-success">
            {{ "c"|trans }}
        </a>
    {% endif %}
{% endblock %}
