{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>{{"lang.list"|trans}}</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <th>{{"lang.code"|trans}}</th>
                <th>{{"lang.name"|trans}}</th>
                <th>{{"lang.rtl"|trans}}</th>
                <th>{{"lang.isTranslated"|trans}}</th>
                <th>{{"actions"|trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('lang_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.code }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ printYesNo(entity.rtl) }}</td>
                    <td>{{ printYesNo(entity.translated) }}</td>

                    <td>
                        {% set show_path = 'lang_show' %}
                        {% set edit_path = 'lang_edit' %}
                        {% set delete_path = 'lang_delete' %}
                        {% include '::actionbtns.html.twig' %}


                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lang_new') }}" class="btn btn-success">
        {{"c"|trans}}
    </a> 
{% endblock %}
