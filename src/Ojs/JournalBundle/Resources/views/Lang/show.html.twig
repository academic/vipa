{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>{{"lang"|trans}} <small>{{ entity.id }}</small></h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{"lang.code"|trans}}</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>{{"lang.name"|trans}}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{"lang.rtl"|trans}}</th>
                <td>{{ entity.rtl }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('lang') }}">
                {{"b"|trans}}
            </a>
        </li>
        <li>
            <a href="{{ path('lang_edit', { 'id': entity.id }) }}">
                {{"e"|trans}}
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
