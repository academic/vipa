{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.posts'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
        {'title': 'title.posts'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "title.posts"|trans }}</h1>
    {% include '::flashbag.html.twig' %}

    {% if is_granted('CREATE', getEntity('OjsAdminBundle:AdminAnnouncement')) %}
        <a href="{{ path('ojs_journal_post_new', {'journalId': selectedJournal().id}) }}" class="btn btn-success">
            {{ "create"|trans }}
        </a>
    {% endif %}

    <hr>
    {{ grid(grid) }}
{% endblock %}
