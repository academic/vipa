{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.journal_contacts'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'title': 'journalcontact.list'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ 'journalcontact.list'|trans }}
        {% if is_granted('CREATE', selectedJournal(), 'contacts') %}
            {% set create_path = 'ojs_journal_journal_contact_new' %}
        {% endif %}
        {% include '::actionbuttons.html.twig' %}
    </h1>
    {% include '::flashbag.html.twig' %}

    {{ grid(grid) }}
{% endblock %}
