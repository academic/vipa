{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.journal_contact_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% if isSystemAdmin() %}
        {% set index_path = 'journalcontact' %}
    {% else %}
        {% set index_path = 'manager_journalcontact' %}
    {% endif %}
    {% set list = [
        {'link': path('dashboard'), 'title': 'dashboard'|trans},
        {'link': path(index_path),'title': 'journal.contact'|trans},
        {'title': 'show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ 'journalcontact.singular'|trans }} <small>#{{ entity.id }}</small></h1>
    {% include '::flashbag.html.twig' %}
    <fieldset>
        <legend>{{ 'journal'|trans }}</legend>
        <div class="list-group">
            <div class="list-group-item list-group-item-info">#{{ entity.journalId }}</div>
            <div class="list-group-item list-group-item-info">{{ entity.journal.title }}</div>
            <div class="list-group-item list-group-item-info">
                <a href="//{{ generateJournalUrl(entity.journal) }}">{{ generateJournalUrl(entity.journal) }}</a>
            </div>
        </div>
        <legend>{{ 'contact'|trans }}</legend>
        <div class="list-group">
            <div class="list-group-item list-group-item-info">#{{ entity.contactId }}</div>
            <div class="list-group-item list-group-item-info">{{ entity.contact.fullName}}</div>
            <div class="list-group-item list-group-item-info">{{ entity.contact.email}}</div>
        </div>
        <legend>{{ 'contact.type'|trans }}</legend>
        <div class="list-group">
            <div class="list-group-item list-group-item-info">{{ entity.contactType.name }}</div>
            <div class="list-group-item list-group-item-info">{{ entity.contactType.description }}</div>
        </div>
    </fieldset>

    <div class="record_actions">
        {% if isSystemAdmin() %}
            {% set back_path = 'journalcontact' %}
            {% set edit_path = 'journalcontact_edit' %}
            {% set delete_path = 'journalcontact_delete' %}
        {%else %}
            {% set back_path = 'manager_journalcontact' %}
            {% set edit_path = 'manager_journalcontact_edit' %}
            {% set delete_path = 'manager_journalcontact_delete' %}
        {% endif %}
        {% include '::actionbuttons.html.twig' %}
    </div>

{% endblock %}
