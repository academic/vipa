        {'link': path('dashboard'), 'title': 'dashboard'|trans},
        {'link': path('ojs_journal_citation_index'), 'title': 'title.citations'|trans},
        {'title': 'title.citation_edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h2>{{ 'title.citation_edit'|trans }}</h2>

    {{ form(edit_form) }}

    {% set create_path = 'ojs_journal_citation_new' %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
