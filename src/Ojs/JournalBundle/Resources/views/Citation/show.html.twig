{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>{{"citation"|trans}}</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties  table">
        <tbody>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{"source"|trans}}</th>
                <td>{{ entity.raw }}</td>
            </tr>
            <tr>
                <th>{{"type"|trans}}</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>{{"order"|trans}}</th>
                <td>{{ entity.orderNum }}</td>
            </tr>

            <tr>
                <th>{{"setting"|trans}}</th>
                <td>

                    {% for setting in entity.settings %}
                        {{setting.setting}} - {{setting.value}}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    {% set edit_path = 'citation_edit' %}
    {% set back_path = 'citation' %}
    {% set delete_path = 'citation_delete' %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
