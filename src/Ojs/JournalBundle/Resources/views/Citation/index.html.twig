{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Citation list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Raw</th>
                <th>Type</th>
                <th>Ordernum</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Deletedat</th>
                <th>Createdby</th>
                <th>Updatedby</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('journal_citation_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.raw }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.orderNum }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.deletedAt %}{{ entity.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.createdBy }}</td>
                <td>{{ entity.updatedBy }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('journal_citation_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('journal_citation_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('journal_citation_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
