{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.journal_roles'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('ujr'),'title': 'user.journalrole'|trans},
    {'title': 'user.journalrole.list'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <div class="large-12 columns">
        <div class="panel">
            <h1>{{ "user.journalrole.list"|trans }}</h1>
            {% include '::flashbag.html.twig' %}
            {{ grid(grid) }}
            {% if is_granted('CREATE', selectedJournal(), 'userRole') %}
                {% set create_path = 'ujr_new' %}
            {% endif %}
            {% include '::actionbuttons.html.twig' %}
        </div>
    </div>
{% endblock %}
