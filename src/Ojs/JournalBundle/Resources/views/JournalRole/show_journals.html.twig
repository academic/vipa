{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.journal_role_show_journals'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('ojs_journal_role_index'),'title': 'user.journalrole'|trans},
    {'title': 'title.journal_role_show_journals'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <div class="large-12 columns">
        <div class="panel">
            <h1>{{ "user.journalrole.journals.of.user"|trans }}</h1>

            <table class="records_list  table">
                <thead>
                <tr>
                    <th>{{ "user.journalrole.journal.id"|trans }}</th>
                    <th>{{ "user.journalrole.journal.name"|trans }}</th>
                    <th>{{ "user.journalrole.role"|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>
                            <a href="{{ path('ojs_admin_journal_show', { 'id': entity.journal.id }) }}">{{ entity.journal.id }}</a>
                        </td>
                        <td>{{ entity.journal.title }} / {{ entity.journal.titleTransliterated }}</td>
                        <td>{{ entity.role.name }} </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn  btn-success" href="{{ path('ojs_journal_role_new') }}">
                {{ "c"|trans }}
            </a>
        </div>
    </div>
{% endblock %}
