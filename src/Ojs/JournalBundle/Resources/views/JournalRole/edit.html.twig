{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.journal_role_edit'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('ojs_journal_role_index'),'title': 'user.journalrole'|trans},
    {'title': 'user.journalrole.edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <div class="large-12 columns">
        <div class="panel">
            <h1>{{ "user.journalrole.edit"|trans }}</h1>
            {% include '::flashbag.html.twig' %}
            {{ form(edit_form) }}

            {% set back_path = 'ojs_journal_role_index' %}
            {% if is_granted('DELETE', selectedJournal(), 'userRole') %}
                {% set delete_path = 'ojs_journal_role_delete' %}
            {% endif %}
            {% include '::actionbuttons.html.twig' %}

            {{ getLogs(entity) }}
        </div>
    </div>
{% endblock %}
