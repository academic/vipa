{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.mail_template_edit'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
        { 'link': path('ojs_admin_mail_template_index'),'title': 'title.mail_templates'|trans},
        {'title': 'title.mail_template_edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ eventDetail.name|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    <div class="well">
        <h5>{{ 'you.can.use.below.params.on.this.template'|trans }} :</h5> <br>
        {{ eventParamsAsString|raw }}
    </div>
    {{ form(form) }}
    {% set back_path = 'ojs_admin_mail_template_index' %}
    {% include '::actionbuttons.html.twig' %}
    {{ getLogs(entity) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $("#ojs_journalbundle_mailtemplate_useJournalDefault").change(function() {
            if(this.checked) {
                $.each($('.use-default-hidden'), function(index, value){
                    console.log($(value).parent());
                    $(value).parent().addClass('hidden');
                });
            }else{
                $.each($('.use-default-hidden'), function(index, value){
                    console.log($(value).parent());
                    $(value).parent().removeClass('hidden');
                });
            }
        });
        $('#ojs_journalbundle_mailtemplate_useJournalDefault').click().click();
    </script>
{% endblock %}