{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'title': 'title.mail_templates'|trans},
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    {% include '::flashbag.html.twig' %}
    <h1>{{ 'title.mail_templates'|trans }}</h1>
    {{ grid(db_templates) }}

    <h1>{{ 'mailtemplate.default.list'|trans }}</h1>
    {{ grid(default_templates) }}
    {% if is_granted('CREATE', getEntity('OjsJournalBundle:File')) %}
        {% set create_path = 'ojs_journal_mail_template_new' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
