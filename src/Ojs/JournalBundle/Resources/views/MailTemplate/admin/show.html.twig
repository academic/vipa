{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('mailtemplate'),'title': 'mail.template'|trans},
    {'title': 'show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>MailTemplate</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>#{{ entity.id }}</td>
        </tr>
        {% if entity.journal %}
            <tr>
                <th>Journal</th>
                <td>{{ entity.journal.title }}</td>
            </tr>
        {% else %}
            <tr>
                <th>Default Template</th>
                <td>Yes</td>
            </tr>
        {% endif %}
        <tr>
            <th>Type</th>
            <td>{{ entity.type }}</td>
        </tr>
        <tr>
            <th>Subject</th>
            <td>{{ entity.subject }}</td>
        </tr>
        <tr>
            <th>Language code</th>
            <td>{{ entity.lang }}</td>
        </tr>
        <tr>
            <th>Template</th>
            <td>{{ entity.template }}</td>
        </tr>
        </tbody>
    </table>

    {% set back_path = 'mailtemplate' %}
    {% if is_granted('EDIT', selectedJournal(), 'mailTemplate') %}
        {% set edit_path = 'mailtemplate_edit' %}
    {% endif %}
    {% if is_granted('DELETE', selectedJournal(), 'mailTemplate') %}
        {% set delete_path = 'mailtemplate_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}

{% endblock %}
