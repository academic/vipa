{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.authors'|trans }} {{ parent() }}{% endblock %}
{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    { 'title': 'author.manager'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "author.list"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ grid(grid) }}
    {% if is_granted('CREATE', getEntity('OjsJournalBundle:Author')) %}
        {% set create_path = 'author_new' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
