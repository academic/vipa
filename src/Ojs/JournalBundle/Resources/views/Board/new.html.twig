{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.board_new'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    { 'link': path('ojs_journal_board_index'),'title': 'board'|trans},
    {'title': 'title.board_new'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    {% if is_granted('CREATE', selectedJournal(), 'boards') %}
        <h1>{{ "board.create"|trans }}</h1>
    {% endif %}
    {{ form(form) }}

    <a href="{{ path('ojs_journal_board_index') }}">
        {{ "b"|trans }}
    </a>

{% endblock %}
