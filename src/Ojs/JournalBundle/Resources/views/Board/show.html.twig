{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('dashboard'), 'title': 'dashboard'|trans},
        { 'link': path('admin_board'),'title': 'board'|trans},
        {'title': 'show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{"board.detail"|trans}}</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties table">
        <tbody>
            <tr>
                <th>{{"id"|trans}}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{"journal"|trans}}</th>
                <td>{{ entity.journal.title }} ({{entity.journal.id}})</td>
            </tr>
            <tr>
                <th>{{"name"|trans}}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{"description"|trans}}</th>
                <td>{{ entity.description|raw }}</td>
            </tr>
        </tbody>
    </table>

    {% set back_path = 'admin_board' %}
    {% set edit_path = 'admin_board_edit' %}
    {% set delete_path = 'admin_board_delete' %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
