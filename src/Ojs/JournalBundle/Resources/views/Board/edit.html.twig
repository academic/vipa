{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.board_edit'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    { 'link': path('ojs_journal_board_index'),'title': 'board'|trans},
    {'title': 'title.board_edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "board.edit"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <button class="btn-primary btn" type="submit">{{ "u"|trans }}</button>
    {{ form_end(edit_form) }}


    <a href="{{ path('ojs_journal_board_index') }}">
        {{ "b"|trans }}
    </a>
    {% if is_granted('DELETE', selectedJournal(), 'boards') %}
        <a href="{{ path('ojs_journal_board_delete',{id: entity.id}) }}">
            {{ "d"|trans }}
        </a>
    {% endif %}

    {{ getLogs(entity) }}

{% endblock %}
