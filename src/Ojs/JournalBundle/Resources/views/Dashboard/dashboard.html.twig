{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.admin_dashboard'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    <!-- TODO: Place this elsewhere -->
    <div style="text-align: center">
        <h1>{{ "dashboard.admin"|trans }}</h1>

        {% if selectedJournal() %}
            <a href="{{ path("dashboard_editor") }}">
                <button class="btn btn-primary">
                    {{ selectedJournal().title }} {{ "dashboard.editor"|trans }}
                </button>
            </a>
        {% endif %}
    </div>
{% endblock %}

{% block body %}
    {% include '::flashbag.html.twig' %}
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <span style="font-size: 24px">{{ 'admin.dashboard.journal_settings'|trans }}</span>
            </div>

            <div class="list-group">
                <a class="list-group-item" href="{{ path('ojs_journal_settings_index', {'journalId': selectedJournal().id}) }}">
                    <span style="color: #337ab7; margin-right: 3px;">
                        <i class="fa fa-cog"></i>
                    </span>
                    {{ "settings"|trans }}
                </a>

                <a class="list-group-item" href="{{ path('ojs_journal_user_index', {'journalId': selectedJournal().id}) }}">
                    <span style="color: #337ab7; margin-right: 3px;">
                        <i class="fa fa-key"></i>
                    </span>
                    {{ "journal.users"|trans }}
                </a>

                <a class="list-group-item" href="{{ path('ojs_journal_article_index', {'journalId': selectedJournal().id}) }}">
                    <span style="color: #337ab7; margin-right: 3px;">
                        <i class="fa fa-file-text"></i>
                    </span>
                    {{"journal.articles"|trans}}
                </a>

                <a class="list-group-item" href="{{ path('ojs_journal_section_index', {'journalId': selectedJournal().id}) }}">
                    <span style="color: #337ab7; margin-right: 3px;">
                        <i class="fa fa-square"></i>
                    </span>
                    {{ "journalsection"|trans }}
                </a>

                <a class="list-group-item" href="{{ path('ojs_journal_issue_index', {journalId: selectedJournal().id}) }}">
                    <span style="color: #337ab7; margin-right: 3px;">
                        <i class="fa fa-newspaper-o"></i>
                    </span>
                    {{ "issue.manager"|trans }}
                </a>

                <a class="list-group-item" href="{{ path('ojs_journal_journal_contact_index', {'journalId': selectedJournal().id}) }}">
                    <span style="color: #337ab7; margin-right: 3px;">
                        <i class="fa fa-credit-card"></i>
                    </span>
                    {{ "contact.plural"|trans }}
                </a>

                <a class="list-group-item" href="{{ path('ojs_journal_mail_template_index', {'journalId': selectedJournal().id}) }}">
                    <span style="color: #337ab7; margin-right: 3px;">
                        <i class="fa fa-envelope"></i>
                    </span>
                    {{"mail.templates"|trans}}
                </a>

                <a class="list-group-item" href="{{ path('ojs_journal_design_index', {'journalId': selectedJournal().id}) }}">
                    <span style="color: #337ab7; margin-right: 3px;">
                        <i class="fa fa-navicon"></i>
                    </span>
                    {{ "journal.design"|trans }}
                </a>

                <a class="list-group-item" href="{{ path('ojs_journal_theme_index', {'journalId': selectedJournal().id}) }}">
                    <span style="color: #337ab7; margin-right: 3px;">
                        <i class="fa fa-th-large"></i>
                    </span>
                    {{ "journal.theme"|trans }}
                </a>

                <a class="list-group-item" href="{{ path('ojs_journal_board_index', {'journalId': selectedJournal().id}) }}">
                    <span style="color: #337ab7; margin-right: 3px;">
                        <i class="fa fa-users"></i>
                    </span>
                    {{ "boards"|trans }}
                </a>

                <a class="list-group-item" href="{{ path('reports_index') }}">
                    <span style="color: #337ab7; margin-right: 3px;">
                        <i class="fa fa-file"></i>
                    </span>
                    {{ "reports.title"|trans }}
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        {{ getLogs(selectedJournal()) }}
    </div>
{% endblock %}
