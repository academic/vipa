{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %} 
    {{breadcrumb([ {'link': path('dashboard'), 'title': 'Dashboard'}, 
    { 'title': 'Contact Manager'}])}}
{% endblock %} 

{% block body -%} 
    <table class="records_list  table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Firstname</th>
                <th>Lastname</th> 
                <th>Country</th> 
                <th>Phone</th> 
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a class="badge" href="{{ path('contact_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.firstName }}</td>
                    <td>{{ entity.lastName }}</td> 
                    <td>{{ entity.country }}</td> 
                    <td>{{ entity.phone }}</td> 
                    <td><span class="label label-default">{{ entity.email }}</span></td>
                    <td>
                        {% set show_path = 'contact_show' %}
                        {% set edit_path = 'contact_edit' %}
                        {% set delete_path = 'contact_delete' %}
                        {% include '::actionbtns.html.twig' %}

                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contact_new') }}" class="btn btn-success">
        {% trans %}c{% endtrans %}
    </a>  
{% endblock %}
