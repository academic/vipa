{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %} 
    {{breadcrumb([ {'link': path('dashboard'), 'title': 'dashboard'|trans},
    { 'title': 'contact.manager'|trans}])}}
{% endblock %} 

{% block body -%} 

    <a href="{{ path('contact_new') }}" class="btn btn-success">{{"c"|trans}}</a>

    <table class="records_list  table">
        <thead>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <th>{{"title"|trans}}</th>
                <th>{{"firstname"|trans}}</th>
                <th>{{"lastname"|trans}}</th> 
                <th>{{"country"|trans}}</th> 
                <th>{{"phone"|trans}}</th> 
                <th>{{"email"|trans}}</th>
                <th>{{"actions"|trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a class="badge" href="{{ path('contact_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.firstName }}</td>
                    <td>{{ entity.lastName }}</td> 
                    <td>{{ entity.country }}</td> 
                    <td>{{ entity.phone }}</td> 
                    <td><span class="label label-default">{{ entity.email }}</span></td>
                    <td>
                        {% set show_path = 'contact_show' %}
                        {% set edit_path = 'contact_edit' %}
                        {% set delete_path = 'contact_delete' %}
                        {% include '::actionbtns.html.twig' %}

                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>  
{% endblock %}
