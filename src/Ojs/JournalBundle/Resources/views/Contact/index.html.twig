{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.contacts'|trans }} {{ parent() }}{% endblock %}


{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'title': 'contact.manager'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    {% include '::flashbag.html.twig' %}
    {% if is_granted('CREATE', getEntity('OjsJournalBundle:Contact')) %}
        <a href="{{ path('contact_new') }}" class="btn btn-success">{{ "c"|trans }}</a>
    {% endif %}
    <hr>
    {{ grid(grid) }}
{% endblock %}
