{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>{{"institutiontype.list"|trans}}</h1>

    <table class="record_properties  table">
        <tbody>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{"name"|trans}}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{"description"|trans}}</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group">
        <a class="btn btn-default" href="{{ path('institution_types') }}">
            <i class="fa fa-arrow-left"></i> {{"b"|trans}}
        </a>
        <a class="btn btn-warning" href="{{ path('institution_types_edit', { 'id': entity.id }) }}">
            <i class="fa fa-edit"></i> {{"e"|trans}}
        </a>
    </div>
    <div class="pull-right">
        {{ form(delete_form) }}
    </div>
{% endblock %}
