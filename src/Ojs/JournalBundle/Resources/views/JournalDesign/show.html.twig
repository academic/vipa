{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.journal_design_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('ojs_journal_design_index'),'title': 'journal.design'|trans},
    {'title': 'title.journal_design_show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "journal.design"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties">
        <tbody>
        <tr>
            <th>{{ 'id'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "journal.id"|trans }}</th>
            <td>{{ entity.journalId }}</td>
        </tr>
        <tr>
            <th>{{ "theme.id"|trans }}</th>
            <td>{{ entity.themeId }}</td>
        </tr>
        </tbody>
    </table>
    {% set back_path = 'ojs_journal_design_index' %}
    {% if is_granted('EDIT', selectedJournal(), 'design') %}
        {% set edit_path = 'ojs_journal_design_edit' %}
    {% endif %}
    {% if is_granted('DELETE', selectedJournal(), 'design') %}
        {% set delete_path = 'ojs_journal_design_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
