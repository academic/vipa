{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.journal_design_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('ojs_journal_dashboard_index', {'journalId': selectedJournal().id}), 'title': 'dashboard'|trans},
    {'link': path('ojs_journal_design_index', {'journalId': selectedJournal().id}),'title': 'journal.design'|trans},
    {'title': 'title.journal_design_show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "journal.design"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties  table">
        <tbody>
        <tr>
            <th>{{ "journal.id"|trans }}</th>
            <td>{{ journalId }}</td>
        </tr>
        <tr>
            <th>{{ "theme.id"|trans }}</th>
            <td>{{ designId }}</td>
        </tr>
        </tbody>
    </table>

    {{
    actions({
        'back': {'href': path('ojs_journal_design_index', {'journalId': selectedJournal().id})},
        'edit': {'href': path('ojs_journal_design_edit', {'id': designId, 'journalId': selectedJournal().id})},
        'delete': {'href': path('ojs_journal_design_delete', {'id': designId, 'journalId': selectedJournal().id}), 'attributes': {'data-token': token}},
    })
    }}
{% endblock %}
