{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.articles'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('dashboard'), 'title': 'dashboard'|trans},
        { 'title': 'article.manager'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@apptour_css' output="c/apptour.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body -%}
    {% if isSystemAdmin() %}
        <p>
            <a href="{{ path('article_new') }}" id="create-new-article" class="btn btn-success">
                {{"article.new"|trans}}
            </a>
        </p>
    {% endif %}
    {% include '::flashbag.html.twig' %}
    {{ grid(grid) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@apptour_js' output="c/apptour.js" %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% javascripts  '@OjsJournalBundle/Resources/public/js/tour/article_admin_tour.js' output="c/article_admin_tour.js" %}
    {% if app.user.setting('tour.admin.article') == FALSE %}<script type="text/javascript" src="{{ asset_url }}"></script> {% endif %}
    {% endjavascripts %}
{% endblock %}
