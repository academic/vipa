{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>{{"issue.list"|trans}}</h1>
    <a class="btn btn-sm btn-info" href="{{ path('issue_new') }}">{{"c"|trans}}</a>
    <table class="records_listb table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{"journal.id"|trans}}</th>
                <th>{{"volume"|trans}}</th>
                <th>{{"number"|trans}}</th>
                <th>{{"title"|trans}}</th>
                <th>{{"cover"|trans}}</th>
                <th>{{"special"|trans}}</th>
                <th>{{"description"|trans}}</th>
                <th>{{"year"|trans}}</th>
                <th>{{"publishdate"|trans}}</th>
                <th>{{"actions"|trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('issue_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.journalId }}</td>
                    <td>{{ entity.volume }}</td>
                    <td>{{ entity.number }}</td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.cover }}</td>
                    <td>{{ entity.special }}</td>
                    <td>{{ entity.description }}</td>
                    <td>{{ entity.year }}</td>
                    <td>{% if entity.datePublished %}{{ entity.datePublished|date('Y-m-d') }}{% endif %}</td>
                    <td>
                        {% set show_path = 'issue_show' %}
                        {% set edit_path = 'issue_edit' %}
                        {% set delete_path = 'issue_delete' %}
                        {% include '::actionbtns.html.twig' %}

                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
