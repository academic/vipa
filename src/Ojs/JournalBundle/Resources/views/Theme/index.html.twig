{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>{{"theme.list"|trans}}</h1>

    <table class="records_list  table">
        <thead>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <th>{{"name"|trans}}</th>
                <th>{{"content"|trans}}</th>
                <th>{{"basetheme"|trans}}</th>
                <th>{{"actions"|trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('theme_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.isPublic }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('theme_show', { 'id': entity.id }) }}" class="btn btn-info btn-sm">{{"s"|trans}}</a>
                            </li>
                            <li>
                                <a href="{{ path('theme_edit', { 'id': entity.id }) }}" class="btn btn-warning btn-sm">{{"e"|trans}}</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('theme_new') }}" class="btn btn-success">
        {{"c"|trans}}
    </a>
{% endblock %}
