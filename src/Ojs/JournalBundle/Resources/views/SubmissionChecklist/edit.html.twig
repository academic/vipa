{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.submission_checklist_edit'|trans }} {{ parent() }}{% endblock %}

{% block  stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/vendor/bootstrap3-wysihtml5-bower/dist/bootstrap3-wysihtml5.css') }}"/>
{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('ojs_journal_checklist_index', {'journalId': selectedJournal().id}),'title': 'submission_checklist.show'|trans},
    {'title': 'title.submission_checklist_edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ 'title.submission_checklist_edit'|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ form(edit_form) }}

    {{
    actions({
        'back': {'href': path('ojs_journal_checklist_index', {'journalId': selectedJournal().id})},
        'deete': {'href': path('ojs_journal_checklist_delete', {'id': entity.id, 'journalId': selectedJournal().id})},
    })
    }}

    {{ getLogs(entity) }}
{% endblock %}

{% block  javascripts %}
    {{ parent() }}
    <script type="text/javascript"
            src="{{ asset('/vendor/bootstrap3-wysihtml5-bower/dist/bootstrap3-wysihtml5.all.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $("textarea").wysihtml5({
                toolbar: {
                    "font-styles": false,
                    "emphasis": true,
                    "lists": false,
                    "html": false,
                    "link": true,
                    "image": false,
                    "color": false,
                    "blockquote": true
                }
            });
        });
    </script>
{% endblock %}
