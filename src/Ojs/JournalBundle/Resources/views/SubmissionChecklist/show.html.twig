{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.submission_checklist_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('manager_submission_checklist'),'title': 'submission_checklist.show'|trans},
    {'title': 'show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ 'submission_checklist.show'|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties table">
        <tbody>
        <tr>
            <th>{{ 'id'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ 'submission_checklist.label'|trans }}</th>
            <td>{{ entity.label|raw }}</td>
        </tr>
        <tr>
            <th>{{ 'submission_checklist.detail'|trans }}</th>
            <td>
                <div class="well">
                    {{ entity.detail|raw }}
                </div>
            </td>
        </tr>
        <tr>
            <th>Visible</th>
            <td>{% if entity.visible %}{{ 'yes'|trans }}{% else %}{{ 'no'|trans }}{% endif %}</td>
        </tr>
        </tbody>
    </table>

    {% set back_path = 'manager_submission_checklist' %}
    {% if is_granted('EDIT', selectedJournal(), 'checklist') %}
        {% set edit_path = 'manager_submission_checklist_edit' %}
    {% endif %}
    {% if is_granted('DELETE', selectedJournal(), 'checklist') %}
        {% set delete_path = 'manager_submission_checklist_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
