{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.journal_theme_edit'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('dashboard'), 'title': 'dashboard'|trans},
        {'link': path('admin_journaltheme'),'title': 'journal.theme'|trans},
        {'title': 'edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{"journaltheme.edit"|trans}}</h1>
    {% include '::flashbag.html.twig' %}
    {{ form(edit_form) }}

    {% set back_path = 'admin_journaltheme' %}
    {% if is_granted('DELETE', selectedJournal(), 'theme') %}
        {% set delete_path = 'admin_journaltheme_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}

    {{ getLogs(entity) }}
{% endblock %}
