{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.submission_author_confirm'|trans }} {{ parent() }}{% endblock %}
{% block breadcrumb %}
    {% set list = [
        { 'link': path('dashboard'), 'title': 'dashboard'|trans },
        {'title': 'confirm.role'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <p>{{"Confirm to register yourself as author."|trans}}</p>
    <div class="well">
    <h4>{{"Current roles"|trans}}</h4>
    {% for role in roles %}
        {{role.name|trans}} <span class="badge">{{role.role|trans}}</span><br>
    {% endfor %}
    </div>
    <form class="form" role="form" method="POST">
        <div class="form-group">
            <label class="control-label">{{"Register yourself as author"|trans}} <span class="mandatory"></span>
                <input name="confirm" type="checkbox"/>
            </label>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">{{"Confirm"|trans}}</button>
        </div>
    </form>
{% endblock %}
