{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>You are not an author of this journal. </h1> 
    <div class="panel panel-default">
        <div class="panel-heading"> 
            <h2 class="panel-title">Confirm to register yourself as author. </h2>
        </div>
        <div class="panel-body">
            <form class="form" role="form" method="POST">
                <div class="form-group">
                    <label class="control-label">Register yourself as author <span class="mandotary"></span>
                        <input name="confirm" type="checkbox"/>
                    </label>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Confirm</button> 
                </div>
            </form>
            <div class="panel-footer">
                <h4>Current roles</h4>
                {% for role in roles %}
                    {{role.name}} <span class="badge">{{role.role}}</span><br>
                {% endfor %}
            </div>
        </div>
    </div> 
{% endblock %}
