{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.submission_author_confirm'|trans }} {{ parent() }}{% endblock %}
{% block breadcrumb %}
    {% set list = [
    { 'link': path('dashboard'), 'title': 'dashboard'|trans },
    {'title': 'title.submission_author_confirm'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <p>{{ "user.join_journal_confirm"|trans }}</p>
    <div class="well">
        <h4>{{ "Current roles"|trans }}</h4>
        {% for journalRole in journalRoles %}
            {{ journalRole.role.name|trans }} <span class="badge">{{ journalRole.role.role|trans }}</span><br>
        {% endfor %}
    </div>
    <form class="form" role="form" method="POST">
        <div class="form-group">
            <label class="control-label">{{ "user.join_journal"|trans }} <span class="mandatory"></span>
                <input name="confirm" type="checkbox"/>
            </label>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">{{ "Confirm"|trans }}</button>
        </div>
    </form>
{% endblock %}
