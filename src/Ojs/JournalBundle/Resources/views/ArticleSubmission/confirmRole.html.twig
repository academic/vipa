{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <p>You are not an author of this journal. Confirm to register yourself as author. </p>
    <div class="well">
    <h4>Current roles</h4>
    {% for role in roles %}
        {{role.name}} <span class="badge">{{role.role}}</span><br>
    {% endfor %}
    </div>
    <form class="form" role="form" method="POST">
        <div class="form-group">
            <label class="control-label">Register yourself as author <span class="mandatory"></span>
                <input name="confirm" type="checkbox"/>
            </label>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Confirm</button>
        </div>
    </form>
{% endblock %}
