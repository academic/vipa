<div class="panel panel-default">
    <div class="panel-heading">
        <a href="#lang_{{ lang.code }}" id="lang_{{ lang.code }}" name="lang_{{ lang.code }}"></a>

        <h2 class="panel-title">{{ lang.name|trans }} <span class="badge">{{ lang.code }}</span></h2>
    </div>
    <div class="panel-body">
        <form class="form validate-form" role="form" id="{{ lang.code }}">
            <div class="form-group">
                <label class="control-label">{{ "title"|trans }} <span class="mandatory"></span></label>
                <input name="title" class="form-control {% if loop.first %}validate[required]{% endif %}"
                       data-errormessage="{{ 'ojs.required_field'|trans }}"
                       placeholder="{{ 'article.title'|trans }}"
                       value="{% if article is defined %}{{ article.title }}{% endif %}"/>
            </div>

            <div class="form-group">
                <label class="control-label">{{ "subtitle"|trans }}</label>
                <input name="subtitle" class="form-control"
                       placeholder="{{ 'article.subtitle'|trans }}"
                       value="{% if article is defined %}{{ article.subtitle }}{% endif %}"/>
            </div>

            <div class="form-group">
                <label class="control-label">{{ "keywords"|trans }} <span class="mandatory"></span></label>
                <input name="keywords" class="form-control input-xs {% if loop.first %}validate[required]{% endif %}"
                       data-errormessage="{{ 'ojs.required_field'|trans }}"
                       placeholder="Comma-seperated keyword list" data-role="tagsinput"
                       value="{% if article is defined %}{{ article.keywords }}{% endif %}"/>
            </div>
            <div class="form-group">
                <label class="control-label">{{ "subjects"|trans }}</label>
                <input name="subjects" class="form-control" placeholder="Comma separated subject lists"
                       value="{% if article is defined %}{{ article.subjects }}{% endif %}"/>
            </div>
            <div class="form-group">
                <label class="control-label">{{ "abstract"|trans }} <span class="mandatory"></span></label>
                <textarea name="abstract" class="editor form-control {% if loop.first %}validate[required]{% endif %}"
                          data-errormessage="{{ 'ojs.required_field'|trans }}"
                          rows="6">{% if article is defined %}{{ article.abstract }}{% else %}
                        {% if journal.getSetting('submissionAbstractTemplate') %}{{ journal.getSetting('submissionAbstractTemplate').value|raw }}{% endif %}
                    {% endif %}</textarea>
            </div>
        </form>
    </div>
</div>
