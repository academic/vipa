{% extends '::ojsbase.html.twig' %}


{% block breadcrumb %}
    {% set list = [
    { 'link': path('dashboard'), 'title': 'dashboard'|trans },
    { 'link': path('article_submissions_me'), 'title': 'article.mysubmits'|trans }

    ] %}
    {{ breadcrumb(list) }}
{% endblock %}


{% block body -%}

    <h1>Submissions</h1>

    <div>
        <a href="{{ path('article_submission_new') }}"
           class="btn btn-success pull-right"> {{ "article.submit"|trans }}</a>
    </div>
    <div class="btn-group">
        <a class="btn btn-default" href="{{ path('article_submissions_me') }}">{{ "article.mysubmits"|trans }}</a>
        {% if isSystemAdmin() or isJournalManager() %}
            <a class="btn {% if all %}btn-info{% else %}btn-default{% endif %}"
               href="{{ path('article_submissions_all') }}">{{ "article.all"|trans }}</a>
        {% endif %}
    </div>
    {%if drafts is defined %}
        <h3>Drafts</h3>
        <table class="records_list table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>{{"journalid"|trans}}</th>
                    <th>{{"title"|trans}}</th> 
                    <th>{{"actions"|trans}}</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in drafts %}
                    <tr>
                        <td>
                            <a href="#">
                                {{ entity.id }}
                            </a>
                        </td>
                        <td>{{ entity.journalId }}</td>
                        <td>{{ entity.articleData[entity.primaryLanguage]['title'] }}</td>
                        <td><a href="{{path( 'article_submission_resume', {'submissionId':entity.id } ) }}" class="btn btn-primary">Resume</a></td>

            <div role="tabpanel" class="tab-pane" id="submissions">
                <h3>Submitted</h3>
                {{ grid(submissions) }}
            </div>
        </div>
    </div>
{% endblock %}
