{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.submission_edit'|trans }} {{ parent() }}{% endblock %}
{% block breadcrumb %}
    {% set list = [
    { 'link': path('ojs_journal_dashboard_index', {journalId: selectedJournal().id}), 'title': 'dashboard'|trans },
    { 'link': path('article_submissions_me'), 'title': 'article.mysubmits'|trans },
    {'title': 'title.submission_edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}


{% block body -%}
    <h1>{{ 'title.submission_edit'|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ form(edit_form) }}

    <div class="record_actions">
        {% set back_path = 'article' %}
        {% set delete_path = 'article_delete' %}
        {% include '::actionbuttons.html.twig' %}
    </div>
{% endblock %}
