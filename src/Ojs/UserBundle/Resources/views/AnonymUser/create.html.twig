{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    { 'link': path('user'), 'title': 'user.manager'|trans},
    { 'title': 'user.anonym'|trans},

    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@upload_css' '%kernel.root_dir%/../web/vendor/select2/select2.css' output="c/user_admin.css" filter="cssrewrite" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

{% endblock %}


{% block body -%}

    <div class="large-12 columns">
        <div class="panel">
        <h1>{{ "user.anonym.new"|trans }}</h1>
        <div class="alert alert-info">
            {% trans %}Eposta adresinde bu kullanıcı var ise normal login işlemi gerçekleştirilecektir.{% endtrans %}
        </div>
            <div class="record_actions">
            {{ form_start(form) }}
            {% for label, flashes in app.session.flashbag.all %}
                {% for flash in flashes %}
                    <div class="alert alert-{{ label }}">
                        {{ flash }}
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_errors(form) }}
            {{ form_widget(form) }}

            <button type="submit" id="ojs_userbundle_user_submit" class="btn btn-primary">
                {{ "c"|trans }}
            </button>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}