{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.mail_log_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('admin_maillog'),'title': 'maillog.singular'|trans},
    {'title': 'show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "maillog.singular" }}</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties">
        <tbody>
        <tr>
            <th>{{ "maillog.id" }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "maillog.mailobject" }}</th>
            <td>{{ entity.mailObject }}</td>
        </tr>
        <tr>
            <th>{{ "maillog.recipientemail" }}</th>
            <td>{{ entity.recipientEmail }}</td>
        </tr>
        </tbody>
    </table>
    {% set back_path = 'admin_maillog' %}
    {% if is_granted('DELETE', entity) %}
        {% set delete_path = 'admin_maillog_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
