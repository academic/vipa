{% set hideleft = 1 %}
{% extends "::ojsbase_modal.html.twig" %}

{% block body %}

    <div class="row">

        <div class="container" style="margin-top:30px">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title"> {{ "user.anonym.create_password"|trans }}</h1>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                        {% for label, flashes in app.session.flashbag.all %}
                            {% for flash in flashes %}
                                <div class="alert alert-{{ label }}">
                                    {{ flash }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                        {{ form_errors(form) }}
                        {{ form_widget(form) }}
                        <button type="submit" id="ojs_userbundle_createpassword" class="btn btn-primary">
                            {{ "c"|trans }}
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
