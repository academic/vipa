{% extends "::ojsbase.html.twig" %}

{% block body %}

    <div class="row">


        <div class="container" style="margin-top:60px">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h1 class="panel-title"><i class="fa fa-key"></i> {{ "sign.in"|trans }}</h1>
                    </div>
                    <div class="panel-body">
                        <form action="{{ path('login_check') }}" method="post">
                            {% include '::flashbag.html.twig' %}
                            {% if error %}
                                <div class="alert alert-danger">
                                    {{ error.message }}
                                </div>
                            {% endif %}
                            <div class="form-group">
                                <label for="username">{{ "username.or.email"|trans }}</label>
                                <input tabindex="1" autofocus="autofocus" name="_username" value="{{ last_username }}"
                                       type="text"
                                       class="form-control" style="border-radius:0" id="username"
                                       placeholder="{{ "username"|trans }}">
                            </div>
                            <div class="form-group">
                                <label for="password">{{ "password"|trans }}
                                    <a tabindex="3"
                                       href="{{ url('ojs_user_forgot_password') }}">({{ "forgot.password"|trans }})</a></label>
                                <input tabindex="2" name="_password" type="password" class="form-control"
                                       style="border-radius:0" id="password" placeholder="{{ "password"|trans }}">
                            </div>

                            <button type="submit" class="btn btn-sm btn-primary pull-right">
                                <i class="fa fa-sign-in"></i> {{ "sign.in"|trans }}
                            </button>
                            <a href="{{ path('register') }}"
                               class="btn btn-sm btn-default pull-left">{{ "user.new"|trans }}</a>
                            <a class="btn btn-sm btn-warning pull-left"
                               href="{{ orcidLoginUrl() }}">{{ "orcid.login"|trans }}</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
