{% extends '::ojsbase.html.twig' %}

{% block body %}


    <h1>{% if entity.avatar %}
        <img class="thumbnail pull-left" style="margin-right:5px;" src="/uploads/avatars/thumbnail/{{entity.avatar}}" />
        {% endif %}
            {{entity.username}}
            <small style="color:green">{% if(entity.isActive != 0)%}<i class="fa fa-check-circle"></i>{%endif%}</small>
            <span class="badge">{{ entity.id }}</span>
                {% if app.user != entity %}
                {%if isProxy %}
                <a class="btn btn-danger pull-right"
                   href="{{path('user_drop_proxy',{'proxyUserId':entity.id})}}">
                    Drop Proxy User
                </a>pr
                {%else%}
                <a class="btn btn-warning pull-right"
                   href="{{path('user_make_proxy',{'proxyUserId':entity.id})}}">
                    Add as Proxy
                </a>
                {%endif%}
                {%endif%}
        </h1>

        {%include '::flashbag.html.twig'%}

        <table class="record_properties  table">
            <tbody> 
                <tr>
                    <th>{{"Username"|trans}}</th>
                    <td>{{ entity.username }}</td>
                </tr>
                <tr>
                    <th>{{"Email"|trans}}</th>
                    <td>{{ entity.email }}</td>
                </tr>
                <tr>
                    <th>{{ "API Key"|trans }}</th>
                    <td>{{ entity.apiKey }}</td>
                </tr>
                <tr>
                    <th>{{"Roles"|trans}}</th>
                    <td>
                        {% for role in entity.roles %}
                            <span class="label label-info" title="{{role.role}}">{{role.name}}</span>  <br/>
                        {% endfor %}
                    </td>

                </tr>
            </tbody>
        </table>

        {% endblock %}
