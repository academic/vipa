{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.user_author_register'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'title': 'register.yourself.as.author'|trans},
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}


{% block body -%}
    <h3>{{ 'register.yourself.as.author'|trans }}</h3>

    <div class="list-group alljournallist">
        {% for entity in entities %}
            <a {% if entity.roles == NULL %}href="{{ path('user_join_journal_action',{'journalId': entity.journal.id}) }}"{% endif %}
               rel="{{ entity.journal.id }}" class="list-group-item
                    {% if entity.roles %} list-group-item-success {% endif %}">
                {{ entity.journal.title }}
                {% if entity.roles %}
                    {% for role in entity.roles %}
                        <span class="label label-info">
                                {{ role.name }}
                            </span>
                    {% endfor %}
                {% else %}
                    <span class="fa fa-plus pull-right"> {{ "register.yourself.as.author"|trans }}</span>
                {% endif %}

            </a>
        {% endfor %}
    </div>
{% endblock %}
