{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.notification_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('admin_notification'),'title': 'notification'|trans},
    {'title': 'show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "notification.singular"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties table">
        <tbody>
        <tr>
            <th>{{ "notification.id"|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "notification.sender.id"|trans }}</th>
            <td>{{ entity.senderId }}</td>
        </tr>
        <tr>
            <th>{{ "notification.recipient.id"|trans }}</th>
            <td>{{ entity.recipientId }}</td>
        </tr>
        <tr>
            <th>{{ "notification.entity.id"|trans }}</th>
            <td>{{ entity.entityId }}</td>
        </tr>
        <tr>
            <th>{{ "notification.entity.name"|trans }}</th>
            <td>{{ entity.entityName }}</td>
        </tr>
        <tr>
            <th>{{ "notification.verb"|trans }}</th>
            <td>{{ entity.action }}</td>
        </tr>
        <tr>
            <th>{{ "notification.isread"|trans }}</th>
            <td>{{ entity.isRead }}</td>
        </tr>
        <tr>
            <th>{{ "notification.level"|trans }}</th>
            <td>{{ entity.level }}</td>
        </tr>
        </tbody>
    </table>

    {% set back_path = 'admin_notification' %}
    {% if is_granted('EDIT', entity) %}
        {% set edit_path = 'admin_notification_edit' %}
    {% endif %}
    {% if is_granted('DELETE', entity) %}
        {% set delete_path = 'admin_notification_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
