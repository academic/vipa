{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.notifications'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('admin_notification'),'title': 'notification'|trans},
    {'title': 'list'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "notification.list"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ grid(grid) }}
    {% if is_granted('CREATE', getEntity('OjsUserBundle:Notification')) %}
        {% set create_path = 'admin_notification_new' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
