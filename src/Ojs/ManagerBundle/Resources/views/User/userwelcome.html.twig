{% extends "::ojsbase.html.twig" %}

{% block stylesheets %}
    {{parent()}}
    <link href="/vendor/morrisjs/morris.css" rel="stylesheet">
{% endblock %}


{% block body %}

    {% include '::flashbag.html.twig' %} 
    <div class="panel panel panel-success">
        <div class="panel-heading toggle-body">
            <i class="fa fa-bar-chart-o fa-fw"></i> Articles That Need Action <i class="pull-right fa fa-angle-double-up"></i>
        </div>
        <div class="panel-body"> 

            {% if invitedSteps %}
                <h4>Invited Steps</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Operation</th>
                            <th>Article Title</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for key,invitation in invitedSteps %} 
                            <tr>
                                <td>  
                                    {{ invitation.step.step.title }} 
                                </td>
                                <td>
                                    <a href="{{path('article_workflow_invitation_preview',{id:invitation.step.id})}}" >
                                        <span>{{invitation.step.articleRevised.articleData[invitation.step.primaryLanguage].title}}</span>
                                    </a>
                                </td>
                                <td>
                                    <span class="btn-group pull-right">
                                        <a href="{{path('article_workflow_invitation_preview',{'id':invitation.step.id})}}" class="btn btn-xs btn-default"  >Details</a>
                                        <a href="{{path('article_workflow_invitation_accept',{'id':invitation.id})}}" class="btn btn-xs btn-success"  >Accept</a>
                                        <a href="{{path('article_workflow_invitation_decline',{'id':invitation.id})}}" class="btn btn-xs btn-warning" onclick="return confirm('{{"sure"|trans}}');" >Decline</a>
                                    </span>
                                </td>
                            </tr>
                        {% endfor %}
                </table>
            {% endif %}

            <div id="articles-action-chart"></div>

            <div class=" ">
                <div>
                    {% for key,step in mySteps %} 

                        <a class="list-group-item {%if waitingCount[step.id]>0%}list-group-item-warning{%else%}list-group-item-default{%endif%}" href="/manager/workflow/articles/{{step.id}}">
                            <h4>{{step.title}}
                                <span class="pull-right label {%if waitingCount[step.id]>0%}label-warning{%else%}label-default{%endif%}">{{waitingCount[step.id]}}</span>
                            </h4>
                        </a>
                    {% endfor %}
                    <hr>
                </div>
            </div>
        </div>
