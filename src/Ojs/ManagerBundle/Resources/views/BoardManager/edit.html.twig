{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.board_edit'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        { 'link': path('dashboard'), 'title': 'dashboard'|trans },
        { 'link': path('board_manager'), 'title': 'board.manager'|trans },
        { 'title': 'edit'|trans }
    ] %}
    {{breadcrumb(list)}}
{% endblock %}

{% block body -%}
    <h1>{{"board.edit"|trans}}</h1>
    {% include '::flashbag.html.twig' %}
    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <button class="btn-primary btn" type="submit">{{"u"|trans}}</button>
    {{ form_end(edit_form) }}

    {% set back_path = 'admin_board' %}
    {% set delete_path = 'admin_board_delete' %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
