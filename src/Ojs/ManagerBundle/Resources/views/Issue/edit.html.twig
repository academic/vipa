{% extends "::ojsbase.html.twig" %}

{% block body %} 

    <div class="row">
        <div class="panel">
            <h1>{{"issue.edit"|trans}}
                <small>
                    <br>vol : {{issue.volume}} 
                    <br>number : {{issue.number}}
                    <br>title: {{issue.title}} 
                    {{journal.title}}
                </small>
            </h1>
            {% for article in articles %}
                <div class="list-group">
                    <div class="list-group-item">
                        <div class="btn-group">
                        <a href="#" class="moveArticleUp btn btn-sm btn-default" rel="{{article.id}}"><i class="fa fa-arrow-up"></i></a>
                        <a href="#" class="moveArticleDown btn btn-sm btn-default" rel="{{article.id}}"><i class="fa fa-arrow-down"></i></a>
                        </div>
                        <a href="{{path('ojs_article_page', {'slug': article.journal.slug, 'article_slug' : article.slug , 'institution' : article.journal.institution.slug  } )}}">
                            {{article.title}}
                        </a> 
                        <br><br>
                        
                        <div class="form-inline">
                            <input value="{{article.firstPage}}" class="input-sm form-control" style="width:80px" type="number">
                            <input value="{{article.lastPage}}" class="input-sm form-control" style="width:80px" type="number">
                        </div>
                    </div>

                </div>
            {% endfor %}

            <a href="#" class="btn btn-primary">
                <i class="fa fa-save"></i> {{"save"|trans}}
            </a>
        </div>
    </div>

{% endblock %}
