{% extends "::ojsbase.html.twig" %}

{% block body %} 

    <div class="row">
        <div class="panel">
            <h1>{{"issue.edit"|trans}}
                <small>
                    <br>vol : {{issue.volume}} 
                    <br>number : {{issue.number}}
                    <br>title: {{issue.title}} 
                    {{journal.title}}
                </small>
            </h1>
            {% for article in articles %}
                <div class="list-group">
                    <div class="list-group-item">
                        <a href="{{path('ojs_article_page', {'slug': article.journal.slug, 'article_slug' : article.slug , 'institution' : article.journal.institution.slug  } )}}">
                            {{article.title}}
                        </a> 
                        <div class="row form-inline">
                            <div class="col-md-12"> 
                                {{"page.plural"|trans}} : 
                                <input value="{{article.firstPage}}" class="input-sm form-control" style="width:80px" type="number">
                                <input value="{{article.lastPage}}" class="input-sm form-control" style="width:80px" type="number">
                            </div>
                            <div class="col-md-12"> 
                                <br>
                                {{"order"|trans}}:
                                <input class="form-control input-sm" value="{{article.orderNum}}" type="number" style="width:50px">
                            </div>
                        </div>
                    </div>

                </div>
            {% endfor %}
            <hr>
            <a href="#" class="btn btn-primary">
                <i class="fa fa-save"></i> {{"save"|trans}}
            </a>
            <a href="#" class="btn btn-warning">
                Cancel
            </a> 
        </div>
    </div>

{% endblock %}