{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.contact_types'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
        { 'title': 'title.contact_types'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "contact.type.list"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ grid(grid) }}
    {% if is_granted('CREATE', getEntity('OjsJournalBundle:ContactTypes')) %}
        <a href="{{ path('ojs_admin_contact_type_new') }}" class="btn btn-success">{{ "c"|trans }}</a>
    {% endif %}
{% endblock %}
