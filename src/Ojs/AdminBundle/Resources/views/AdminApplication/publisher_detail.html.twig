{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.publisher_detail'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    { 'link': path('ojs_admin_application_publisher_index'),'title': 'application.journal.publisher'|trans},
    {'title': 'show'|trans},
    {'title': entity.name}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}

    <div class="col-md-12">
        <div class="panel">
            <h1>{{ "application.institute.detail"|trans }}</h1>
            {% include '::flashbag.html.twig' %}

            <table class="records_list  table" style="width:100%">
                <tr>
                    <th>{{ "institute.id"|trans }}</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>{{ "institute.name"|trans }}</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>{{ 'publisher.slug'|trans }}</th>
                    <td>{{ entity.slug }}</td>
                </tr>
                <tr>
                    <th>{{ 'institute.address'|trans }}</th>
                    <td>{{ entity.address }}</td>
                </tr>
                <tr>
                    <th>{{ 'institute.about'|trans }}</th>
                    <td>{{ entity.about }}</td>
                </tr>
                <tr>
                    <th>{{ 'institute.city'|trans }}</th>
                    <td>{{ entity.city }}</td>
                </tr>
                <tr>
                    <th>{{ 'institute.lat-lon'|trans }}</th>
                    <td>{{ entity.addressLat }}, {{ entity.addressLong }}</td>
                </tr>
                <tr>
                    <th>{{ 'institute.phone'|trans }}</th>
                    <td>{{ entity.phone }}</td>
                </tr>
                <tr>
                    <th>{{ 'institute.fax'|trans }}</th>
                    <td>{{ entity.fax }}</td>
                </tr>
                <tr>
                    <th>{{ 'institute.email'|trans }}</th>
                    <td>{{ entity.email }}</td>
                </tr>
                <tr>
                    <th>{{ 'institute.url'|trans }}</th>
                    <td><a href="{{ entity.url }}" target="_blank">{{ entity.url }}</a></td>
                </tr>
                <tr>
                    <th>{{ 'institute.wiki_url'|trans }}</th>
                    <td><a href="{{ entity.wiki }}" target="_blank">{{ entity.wiki }}</a></td>
                </tr>
                <tr>
                    <th>{{ 'institute.logo'|trans }}</th>
                    <td>
                        {% if entity.logo %}
                            <img src="{{ entity.logo|imagine_filter('publisher_logo') }}" alt=""
                                 style="max-width: 100%"/>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>{{ 'institute.header'|trans }}</th>
                    <td>
                        {% if entity.header %}
                            <img src="{{ entity.header|imagine_filter('publisher_header') }}" alt=""
                                 style="max-width: 100%"/>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>{{ 'institute.tags'|trans }}</th>
                    <td>{{ entity.tags }}</td>
                </tr>
                <tr>
                    <th>{{ 'institute.createdAt'|trans }}</th>
                    <td>{{ entity.created|date('d-m-y') }}</td>
                </tr>
                <tr>
                    <th>{{ 'institute.user'|trans }}</th>
                    <td>{{ entity.createdBy|user }}</td>
                </tr>
            </table>
            <a class="btn btn-success" href="{{ url('ojs_admin_application_publisher_save', {id: entity.id}) }}">
                {{ "institute.merge_as_new_institute"|trans }}
            </a>
        </div>
    </div>
{% endblock %}
