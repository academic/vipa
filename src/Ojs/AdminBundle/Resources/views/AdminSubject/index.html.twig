{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.subjects'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'title': 'subject'|trans},
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "subject.list"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    <a href="#" onclick="$('.grid').toggle();
            $('.tree').toggle();
            return false;" class="btn btn-info btn-sm">Toggle Tree</a>
    <hr>
    {{ grid(grid) }}
    <div class="tree" style="display:none">{{ htmlTree|raw }}</div>
    <div>
        {% if is_granted('CREATE', getEntity('OjsJournalBundle:Subject')) %}
            <a href="{{ path('ojs_admin_subject_new') }}" class="btn btn-success">
                {{ "c"|trans }}
            </a>
        {% endif %}
    </div>
{% endblock %}
