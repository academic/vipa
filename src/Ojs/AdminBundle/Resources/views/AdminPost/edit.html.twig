{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.post_edit'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
        {'link': path('ojs_admin_post_index'),'title': 'title.posts'|trans},
        {'title': 'title.post_edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ 'title.post_edit'|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ form(edit_form) }}

    <hr>

    {{
        actions({
            'back': {'href': path('ojs_admin_post_index')},
            'delete': {
                'href': path('ojs_admin_post_delete', {'id': entity.id}),
                'permission': is_granted('DELETE', entity),
                'attributes': {'data-token': token}
            },
        })
    }}

    {{ getLogs(entity) }}
{% endblock %}
