{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.proxy_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('ojs_admin_proxy_index'),'title': 'proxy'|trans},
    {'title': 'show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "proxy.singular"|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties  table">
        <tbody>
        <tr>
            <th>{{ "proxy.id"|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "proxy.proxy.user.id"|trans }}</th>
            <td>{{ entity.proxyUserId }}</td>
        </tr>
        <tr>
            <th>{{ "proxy.client.user.id"|trans }}</th>
            <td>{{ entity.clientUserId }}</td>
        </tr>

        </tbody>
    </table>

    {% set back_path = 'ojs_admin_proxy_index' %}
    {% if is_granted('EDIT', entity) %}
        {% set edit_path = 'ojs_admin_proxy_edit' %}
    {% endif %}
    {% if is_granted('DELETE', entity) %}
        {% set delete_path = 'ojs_admin_proxy_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
