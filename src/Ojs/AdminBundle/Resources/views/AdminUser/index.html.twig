{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.users'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
        { 'title': 'title.users'|trans},
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}
{% block body -%}
    <div class="row">
        <div class="col-sm-12">
            <h1>{{ "user.list"|trans }}</h1>
            {% include '::flashbag.html.twig' %}

            {% if is_granted('CREATE', getEntity('OjsUserBundle:User')) %}
                <a href="{{ path('ojs_admin_user_new') }}" class="btn btn-success">
                    {{ "user.new"|trans }}
                </a>
                <a href="{{ path('ojs_admin_user_merge') }}" class="btn btn-primary">
                    {{ "user.merge"|trans }}
                </a>
            {% endif %}

            <hr>
            {{ grid(grid) }}
        </div>
    </div>
{% endblock %}
