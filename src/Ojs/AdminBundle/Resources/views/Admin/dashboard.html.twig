{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.admin_dashboard'|trans }} {{ parent() }}{% endblock %}

{% block body %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h1 class="text-center">{{ 'title.admin_dashboard'|trans }}</h1>
    </div>
    <div class="panel-body">
        <div class="col-sm-6">
            {% include '::flashbag.html.twig' %}
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span style="font-size: 24px">{{ 'admin.dashboard.system_settings'|trans }}</span>
                </div>

                <div class="list-group">
                    <a class="list-group-item" href="{{ path('ojs_admin_user_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-users"></i>
                        </span>
                        {{ "users"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('ojs_admin_journal_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-newspaper-o"></i>
                        </span>
                        {{ "user.journalrole.alljournals"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('ojs_admin_role_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-key"></i>
                        </span>
                        {{ "roles"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('ojs_admin_language_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-language"></i>
                        </span>
                        {{ "languages"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('ojs_admin_institution_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-university"></i>
                        </span>
                        {{ "institution"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('ojs_admin_institution_type_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-building"></i>
                        </span>
                        {{ "institutiontype.plural"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('ojs_admin_article_type_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-file-text"></i>
                        </span>
                        {{ "article.types"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('ojs_admin_contact_type_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-user"></i>
                        </span>
                        {{ "contacttype.plural"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('ojs_admin_subject_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-bookmark"></i>
                        </span>
                        {{ "subject.plural"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('ojs_admin_index_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-sitemap"></i>
                        </span>
                        {{ "journalsindex.plural"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('ojs_admin_theme_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-th-large"></i>
                        </span>
                        {{ "theme.plural"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('ojs_admin_design_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-navicon"></i>
                        </span>
                        {{ "design"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('okulbilisim_feedback_homepage') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-envelope"></i>
                        </span>
                        {{ "feedback"|trans }}
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span style="font-size: 24px">{{ 'admin.dashboard.applications'|trans }}</span>
                </div>
                <div class="list-group">
                    <a class="list-group-item" href="{{ path('ojs_admin_application_journal_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-newspaper-o"></i>
                        </span>
                        {{ "application.journal"|trans }}
                    </a>

                    <a class="list-group-item" href="{{ path('ojs_admin_application_institution_index') }}">
                        <span style="color: #337ab7; margin-right: 3px;">
                            <i class="fa fa-university"></i>
                        </span>
                        {{ "application.institute"|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}