{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.language_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
        {'link': path('ojs_admin_language_index'),'title': 'title.languages'|trans},
        {'title': 'title.language_show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ entity.name|trans }}
    </h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties  table">
        <tbody>
        <tr>
            <th>{{ 'id'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "lang.code"|trans }}</th>
            <td>{{ entity.code }}</td>
        </tr>
        <tr>
            <th>{{ "lang.name"|trans }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ "lang.rtl"|trans }}</th>
            <td>{{ printYesNo(entity.rtl) }}</td>
        </tr>
        </tbody>
    </table>

    {{
        actions({
            'back': {'href': path('ojs_admin_language_index')},
            'edit': {'href': path('ojs_admin_language_edit', {'id': entity.id})},
            'delete': {'href': path('ojs_admin_language_delete', {'id': entity.id}), 'attributes': {'data-token': token}},
        })
    }}
{% endblock %}
