{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.design_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
        {'link': path('ojs_admin_design_index'),'title': 'title.designs'|trans},
        {'title': 'title.design_show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ entity.name|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    <table class="record_properties  table">
        <tbody>
        <tr>
            <th>{{ 'ID'|trans }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "Name"|trans }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ "Content"|trans }}</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>{{ "ojs.is_public"|trans }}</th>
            <td>{{ entity.isPublic }}</td>
        </tr>
        </tbody>
    </table>
    {% set back_path = 'ojs_admin_design_index' %}
    {% if is_granted('EDIT', entity) %}
        {% set edit_path = 'ojs_admin_design_edit' %}
    {% endif %}
    {% if is_granted('DELETE', entity) %}
        {% set delete_path = 'ojs_admin_design_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
