{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.journal_indexes'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
        {'title': 'title.journal_indexes'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ 'journalindex.list'|trans }}</h1>
    {% include '::flashbag.html.twig' %}

    {% if is_granted('CREATE', selectedJournal(), 'index') %}
        <a href="{{ path('ojs_admin_index_new') }}" class="btn btn-success">
            {{ 'c'|trans }}
        </a>
    {% endif %}

    <hr>
    {{ grid(grid) }}
{% endblock %}
