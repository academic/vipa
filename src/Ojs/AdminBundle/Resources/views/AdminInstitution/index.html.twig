{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.institutions'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
        { 'title': 'title.institutions'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    {% include '::flashbag.html.twig' %}
    {% if is_granted('CREATE', getEntity('OjsJournalBundle:Institution')) %}
        <a href="{{ path('ojs_admin_institution_new') }}" class="btn btn-success">{{ "c"|trans }}</a>
    {% endif %}
    {{ grid(grid) }}

{% endblock %}
