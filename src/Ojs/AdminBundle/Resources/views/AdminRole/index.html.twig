{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.roles'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
        {'title': 'title.roles'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <div class="col-md-12">
        <div class="panel">
            <h1>{{ "role.list"|trans }}</h1>
            {% include '::flashbag.html.twig' %}

            {% if is_granted('CREATE', getEntity('OjsUserBundle:Role')) %}
                <a href="{{ path('ojs_admin_role_new') }}" class="btn btn-success">
                    {{ "c"|trans }}
                </a>
            {% endif %}

            <hr>
        </div>
    </div>
{% endblock %}
