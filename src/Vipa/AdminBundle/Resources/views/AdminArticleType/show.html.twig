{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.article_type_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('ojs_admin_article_type_index'),'title': 'article.types'|trans},
    {'title': 'show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ entity.name|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ display(entity) }}
    {% set back_path = 'ojs_admin_article_type_index' %}
    {% if is_granted('EDIT', entity) %}
        {% set edit_path = 'ojs_admin_article_type_edit' %}
    {% endif %}
    {% if is_granted('DELETE', entity) %}
        {% set delete_path = 'ojs_admin_article_type_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
