{% extends '::vipabase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.user_new'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('vipa_admin_dashboard'), 'title': 'dashboard'|trans},
        { 'link': path('vipa_admin_user_index'), 'title': 'title.users'|trans},
        { 'title': 'title.user_new'|trans},
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <div class="large-12 columns">
        <div class="panel">
            <h1>{{ "user.new"|trans }}</h1>
            {% include '::flashbag.html.twig' %}
            <div class="record_actions">
                {{ form(form) }}
                {% include '::actionbuttons.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}

