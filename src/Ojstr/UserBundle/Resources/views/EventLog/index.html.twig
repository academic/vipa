{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>EventLog list</h1>

    <table class="records_list  table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Eventinfo</th>
                <th>Eventdate</th>
                <th>Ip</th>
                <th>Userid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('eventlog_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.eventInfo }}</td>
                <td>{% if entity.eventDate %}{{ entity.eventDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.ip }}</td>
                <td>{{ entity.userId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('eventlog_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('eventlog_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('eventlog_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
