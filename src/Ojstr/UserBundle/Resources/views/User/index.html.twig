{% extends '::ojsbase.html.twig' %}

{% block body -%}
<div class="large-12 columns">
    <div class="panel">
        <h1>User list</h1>

        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>IsActive</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
        {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.username }}</td>
                    <td>{{ entity.email }}</td>
                    <td>{{ entity.isActive }}</td>
                    <td>{% for role in entity.roles %}
                        <span class="label">{{role.role}}</span>
                        {% endfor %}
                    </td>
                    <td> 
                        <a href="{{ path('user_show', { 'id': entity.id }) }}"
                           class="button success">{% trans %}Show{% endtrans %}</a>

                        <a href="{{ path('user_edit', { 'id': entity.id }) }}"
                           class="button alert">{% trans %}Edit{% endtrans %}</a>

                    </td>
                </tr>
        {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('user_new') }}" class="button">
            + {% trans %}Create New{% endtrans %}
        </a> 
    </div>
</div>
    {% endblock %}
