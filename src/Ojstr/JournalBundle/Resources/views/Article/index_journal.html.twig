{% extends '::ojsbase.html.twig' %}

{% block body -%}

<div class="large-12 columns">
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Articles in Journal <strong>{{journal.title }}</strong></div>
        <div class="panel-body">
            <p>Here you can find all articles for selected journal <strong>{{journal.title }}</strong></p>
        </div>


        {% include "OjstrJournalBundle:Article:index_list_block.html.twig" %}
        <div class="panel-footer">
            <a href="{{ path('article_new') }}" class="btn btn-success">
                    {% trans %}Create New{% endtrans %}
            </a>
            <a href="{{ path('article') }}" class="btn btn-default">
                    {% trans %}Back to list{% endtrans %}
            </a>
        </div>
    </div>

</div>
</div>
{% endblock %}
