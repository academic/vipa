<table class="records_list table" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Primary Language</th>
            <th>Doi</th>
            <th>Journal</th>
            <th>Issue</th>
            <th>Title</th>
            <th>Pubdate</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
                {% for entity in entities %}
        <tr>
            <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td> <span class="badge">{{ entity.primaryLanguage }}</span></td>

            <td>
                {% if entity.doi%}
                {{ entity.doi }}
                {%else%}
                -
                {% endif %}
            </td>
            <td>
                {% if entity.journalId %}
                <a class="label label-success" href="{{path('article_journal', { 'journalId': entity.journalId }) }}">
                {{ entity.journalId }} {{ entity.journal.title }}</a>
                {% endif %}
            </td>
            <td>
                {% if entity.issueId %}
                <a class="label label-info" href="{{path('article_issue', { 'issueId': entity.issueId }) }}">
                {{ entity.issue.volume }}/{{ entity.issue.number }} {{ entity.issue.title }}</a>
                {% endif %}
            </td>
            <td>{{ entity.title }}</td>
            <td>{% if entity.pubdate %}{{ entity.pubdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>

            {% set show_path = 'article_show' %}
            {% set edit_path = 'article_edit' %}
            {% set delete_path = 'article_delete' %}
            {% include '::actionbtns.html.twig' %}

            </td>
        </tr>
                {% endfor %}
    </tbody>
</table>
