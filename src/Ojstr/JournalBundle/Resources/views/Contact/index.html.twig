{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>Contact list</h1>

    <table class="records_list  table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Address</th>
                <th>Country</th>
                <th>City</th>
                <th>Phone</th>
                <th>Fax</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('contact_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.firstName }}</td>
                    <td>{{ entity.lastName }}</td>
                    <td>{{ entity.address }}</td>
                    <td>{{ entity.country }}</td>
                    <td>{{ entity.city }}</td>
                    <td>{{ entity.phone }}</td>
                    <td>{{ entity.fax }}</td>
                    <td>{{ entity.email }}</td>
                    <td>
                        {% set show_path = 'contact_show' %}
                        {% set edit_path = 'contact_edit' %}
                        {% set delete_path = 'contact_delete' %}
                        {% include '::actionbtns.html.twig' %}

                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contact_new') }}" class="btn btn-success">
                {% trans %}c{% endtrans %}
            </a>
        </li>
    </ul>
{% endblock %}
