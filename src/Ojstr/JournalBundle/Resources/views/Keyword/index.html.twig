{% extends '::ojsbase.html.twig' %}
{% block body -%}
<h1>Keyword list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Keyword</th>
            <th>Langid</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('keyword_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.keyword }}</td>
            <td>{{ entity.langId }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('keyword_show', { 'id': entity.id }) }}" class="btn btn-info btn-sm">{% trans %}Show{% endtrans %}</a>
                    </li>
                    <li>
                        <a href="{{ path('keyword_edit', { 'id': entity.id }) }}" class="btn btn-warning btn-sm">{% trans %}Edit{% endtrans %}</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('keyword_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
    {% endblock %}
