{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>ArticleAuthor</h1>

    <table class="table record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Authororder</th>
                <td>{{ entity.authorOrder }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>#{{ entity.author.Id }} {{ entity.author.firstName }} {{ entity.author.middleName }} {{ entity.author.lastName }}</td>
            </tr>
            <tr>
                <th>Article</th>
                <td><a href="{{path('article_show',{id:entity.article.Id })}}">#{{ entity.article.Id }}</a> {{ entity.article.title }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('articleauthor') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('articleauthor_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
