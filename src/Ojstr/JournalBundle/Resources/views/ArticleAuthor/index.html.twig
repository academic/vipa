{% extends '::ojsbase.html.twig' %}

{% block body -%}
<h1>ArticleAuthor list</h1>

<table class="table records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Authororder</th>
            <th>Authorid</th>
            <th>Articleid</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('articleauthor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.authorOrder }}</td>
            <td><a href="{{path('author_show',{id:entity.author.Id })}}">#{{ entity.author.Id }}</a> {{ entity.author.firstName }} {{ entity.author.middleName }} {{ entity.author.lastName }}</td>
            <td><a href="{{path('article_show',{id:entity.article.Id })}}">#{{ entity.article.Id }}</a> {{ entity.article.title }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('articleauthor_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('articleauthor_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a class="btn btn-success" href="{{ path('articleauthor_new') }}">
    Create a new entry
</a>

    {% endblock %}
