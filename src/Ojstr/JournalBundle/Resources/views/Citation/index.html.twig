{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>Citation list</h1>

    <table class="records_list  table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Source</th>
                <th>Type</th>
                <th>Ordernum</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('citation_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.source }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.orderNum }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('citation_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('citation_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('citation_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
