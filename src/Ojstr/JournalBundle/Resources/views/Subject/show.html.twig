{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>Subject</h1>

    <table class="record_properties  table">
        <tbody>
            <tr>
                <th width="200px">Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ entity.subject }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="record_actions">
        <a href="{{ path('subject') }}" class="button">
            {% trans %}back{% endtrans %}
        </a>
        <a href="{{ path('subject_edit', { 'id': entity.id }) }}" class="button">
            {%trans%}e{%endtrans%}
        </a>
        {{ form(delete_form) }}
    </div>
{% endblock %}
