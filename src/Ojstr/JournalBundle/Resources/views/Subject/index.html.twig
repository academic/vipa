{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>Subject list</h1>

    <table class="records_list  table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('subject_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.subject }}</td>
                    <td>{{ entity.description }}</td>
                    <td>
                        <small>
                            <a href="{{ path('subject_show', { 'id': entity.id }) }}" class="btn btn-info btn-sm">{% trans %}s{% endtrans %}</a>
                            <a href="{{ path('subject_edit', { 'id': entity.id }) }}" class="btn btn-warning btn-sm">{% trans %}e{% endtrans %}</a>
                        </small>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div>
        <a href="{{ path('subject_new') }}" class="btn btn-success">
            {% trans %}c{% endtrans %}
        </a>
    </div>
{% endblock %}
