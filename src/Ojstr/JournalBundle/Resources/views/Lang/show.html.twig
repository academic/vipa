{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>Langguage <small>{{ entity.id }}</small></h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Rtl</th>
                <td>{{ entity.rtl }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('lang') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('lang_edit', { 'id': entity.id }) }}">
                {%trans%}e{%endtrans%}
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
