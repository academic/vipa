{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
                {'link': path('dashboard'), 'title': 'Dashboard'},
                { 'title': 'Journal Manager'}

] %}
    {{breadcrumb(list)}}
{% endblock %}

{% block body -%}
    <h1>Journal List</h1>
    <a class="btn btn-info" href="{{path('journal')}}">
        <i class="fa fa-asterisk"></i> All journals</a>
    <a class="btn btn-default" href="{{path('user_show_my_journals')}}">
        <i class="fa fa-user"></i> My journals</a>

    <table class="records_list  table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Issn</th>
                <th>Firstpublishdate</th>
                <th>Url</th>
                <th>published</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('journal_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.issn }}</td>
                    <td>{% if entity.firstPublishDate %}{{ entity.firstPublishDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ entity.url }}</td>
                    <td>{{ entity.published }}</td>
                    <td>{{ entity.status }}</td>
                    <td>
                        <a href="{{ path('journal_show', { 'id': entity.id }) }}" class="btn btn-info btn-sm"> {% trans %}s{% endtrans %}</a> <br>
                        <a href="{{ path('journal_edit', { 'id': entity.id }) }}" class="btn btn-info btn-sm"> {% trans %}e{% endtrans %}</a>
                        </div
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div>
        <a href="{{ path('journal_new') }}" class="btn btn-success">
            {% trans %}c{% endtrans %}
        </a>
    </div>
{% endblock %}
