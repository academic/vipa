{% extends '::ojsbase.html.twig' %}

{% block body -%}
<div class="large-12 columns">
    <div class="panel">
        <h1>Journal list</h1>

        <table class="records_list" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Titleabbr</th>
                    <th>Titletranslated</th> 
                    <th>Issn</th>
                    <th>Eissn</th>
                    <th>Firstpublishdate</th>
                    <th>Period</th>
                    <th>Url</th>
                    <th>Publishstatus</th>
                    <th>Status</th>
                    <th>Coverimage</th> 
                    <th>Themeid</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
        {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('journal_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.titleAbbr }}</td>
                    <td>{{ entity.titleTranslated }}</td>
                     <td>{{ entity.issn }}</td>
                    <td>{{ entity.eissn }}</td>
                    <td>{% if entity.firstPublishDate %}{{ entity.firstPublishDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ entity.period }}</td>
                    <td>{{ entity.url }}</td>
                     <td>{{ entity.publishStatus }}</td>
                    <td>{{ entity.status }}</td>
                    <td>{{ entity.coverImage }}</td> 
                    <td>{{ entity.themeId }}</td>
                    <td>
                            <small>
                                <a href="{{ path('journal_show', { 'id': entity.id }) }}">-show</a>
                                <a href="{{ path('journal_edit', { 'id': entity.id }) }}">-edit</a>
                            </small>
                        </div
                    </td>
                </tr>
        {% endfor %}
            </tbody>
        </table>

        <div>
                 <a href="{{ path('journal_new') }}" class="button success">
                    + Create a new entry
                </a>
         </div>
    </div>
</div>
    {% endblock %}
