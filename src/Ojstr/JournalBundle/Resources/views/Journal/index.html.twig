{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>Journal list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Titleabbr</th>
                <th>Titletranslated</th>
                <th>Subtitle</th>
                <th>Issn</th>
                <th>Eissn</th>
                <th>Firstpublishdate</th>
                <th>Period</th>
                <th>Url</th>
                <th>Country</th>
                <th>Publishstatus</th>
                <th>Status</th>
                <th>Coverimage</th>
                <th>Scope</th>
                <th>Mission</th>
                <th>Themeid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('journal_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.titleAbbr }}</td>
                <td>{{ entity.titleTranslated }}</td>
                <td>{{ entity.subtitle }}</td>
                <td>{{ entity.issn }}</td>
                <td>{{ entity.eissn }}</td>
                <td>{% if entity.firstPublishDate %}{{ entity.firstPublishDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.period }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.publishStatus }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.coverImage }}</td>
                <td>{{ entity.scope }}</td>
                <td>{{ entity.mission }}</td>
                <td>{{ entity.themeId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('journal_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('journal_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('journal_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
