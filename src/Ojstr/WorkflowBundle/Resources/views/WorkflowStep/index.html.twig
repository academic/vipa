{% extends '::ojsbase.html.twig' %}

{% block body -%}
    <h1>WorkflowStep list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>#Id</th>
                <th>Journal</th>
                <th>Name</th>
                <th>Description</th>
                <th>Next Step</th>
                <th>Previous Step</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('workflowstep_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.journalId }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.nextId }}</td>
                <td>{{ entity.prevId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('workflowstep_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('workflowstep_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('workflowstep_new') }}">
                {% trans %}Create New{% endtrans %}
            </a>
        </li>
    </ul>
    {% endblock %}
